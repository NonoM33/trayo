# Configuration Trayo - Variables d'Environnement
# Copier ce fichier en .env et remplir les valeurs

# Rails
RAILS_ENV=production
RAILS_MASTER_KEY=your_master_key_here
SECRET_KEY_BASE=your_secret_key_base_here

# Base de données PostgreSQL
DATABASE_URL=postgresql://user:password@host:5432/trayo_production

# API MT5
MT5_API_KEY=mt5_secret_key_change_in_production

# Web Concurrency (nombre de workers Puma)
WEB_CONCURRENCY=2
RAILS_MAX_THREADS=5

# Render spécifique
RAILS_LOG_TO_STDOUT=true
RAILS_SERVE_STATIC_FILES=true

# Email (optionnel - pour les notifications)
# SMTP_ADDRESS=smtp.gmail.com
# SMTP_PORT=587
# SMTP_DOMAIN=yourdomain.com
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_AUTHENTICATION=plain
# SMTP_ENABLE_STARTTLS_AUTO=true

# URL de l'application (pour les emails et redirections)
# APP_URL=https://your-app.onrender.com
