<div class="p-6 space-y-6">
  <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
    <div class="flex items-center gap-4">
      <div class="w-14 h-14 rounded-2xl <%= @maintenance.is_enabled? ? 'bg-green-500/20' : 'bg-neutral-700' %> flex items-center justify-center">
        <i class="fa-solid fa-wrench text-2xl <%= @maintenance.is_enabled? ? 'text-green-400' : 'text-neutral-400' %>"></i>
      </div>
      <div>
        <h2 class="text-xl font-bold text-white">Mode Maintenance</h2>
        <div class="flex items-center gap-2 mt-1">
          <% if @maintenance.is_enabled? %>
            <span class="w-2.5 h-2.5 rounded-full bg-green-400 animate-pulse"></span>
            <span class="text-green-400 font-medium">Activé</span>
          <% else %>
            <span class="w-2.5 h-2.5 rounded-full bg-neutral-500"></span>
            <span class="text-neutral-400">Désactivé</span>
          <% end %>
        </div>
      </div>
    </div>
    
    <%= form_with url: admin_maintenance_toggle_path, method: :patch, local: true do |form| %>
      <%= form.submit @maintenance.is_enabled? ? 'Désactiver' : 'Activer', 
          class: "px-5 py-2.5 rounded-lg text-sm font-medium cursor-pointer #{@maintenance.is_enabled? ? 'bg-red-600 text-white hover:bg-red-500' : 'bg-green-600 text-white hover:bg-green-500'}",
          data: { turbo_confirm: @maintenance.is_enabled? ? 'Désactiver le mode maintenance ?' : 'Activer le mode maintenance ?' } %>
    <% end %>
  </div>

  <%= form_with model: @maintenance, url: admin_maintenance_path, method: :patch, local: true, class: "space-y-4" do |form| %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <label class="block text-sm font-medium text-neutral-300 mb-1.5">Titre Principal *</label>
        <%= form.text_field :title, placeholder: "Ex: Maintenance Programmée", required: true, class: "w-full px-4 py-2.5 bg-neutral-800 border border-neutral-700 rounded-lg text-white placeholder-neutral-500 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      <div>
        <label class="block text-sm font-medium text-neutral-300 mb-1.5">URL du Logo</label>
        <%= form.url_field :logo_url, placeholder: "https://...", class: "w-full px-4 py-2.5 bg-neutral-800 border border-neutral-700 rounded-lg text-white placeholder-neutral-500 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
    </div>
    
    <div>
      <label class="block text-sm font-medium text-neutral-300 mb-1.5">Sous-titre *</label>
      <%= form.text_field :subtitle, placeholder: "Ex: Nous travaillons pour améliorer votre expérience", required: true, class: "w-full px-4 py-2.5 bg-neutral-800 border border-neutral-700 rounded-lg text-white placeholder-neutral-500 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    
    <div>
      <label class="block text-sm font-medium text-neutral-300 mb-1.5">Description *</label>
      <%= form.text_area :description, placeholder: "Message détaillé...", rows: 3, required: true, class: "w-full px-4 py-2.5 bg-neutral-800 border border-neutral-700 rounded-lg text-white placeholder-neutral-500 focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none" %>
    </div>
    
    <div>
      <label class="block text-sm font-medium text-neutral-300 mb-1.5">Date de Fin</label>
      <%= form.datetime_local_field :countdown_date, class: "w-full px-4 py-2.5 bg-neutral-800 border border-neutral-700 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    
    <div class="flex justify-end pt-4">
      <%= form.submit "Sauvegarder", class: "px-5 py-2.5 bg-blue-600 rounded-lg text-sm font-medium text-white cursor-pointer hover:bg-blue-500" %>
    </div>
  <% end %>

  <div class="bg-gradient-to-br from-purple-600 to-pink-600 rounded-xl p-6 text-center text-white">
    <h3 class="text-xl font-bold mb-2"><%= @maintenance.title || "Maintenance" %></h3>
    <p class="opacity-90"><%= @maintenance.subtitle %></p>
    <p class="text-sm opacity-70 mt-2"><%= truncate(@maintenance.description, length: 100) %></p>
  </div>
</div>

