<% @page_title = "Mes Trades" %>

<div class="space-y-6">
  <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
    <div>
      <h1 class="text-3xl font-bold text-neutral-900 dark:text-white tracking-tight flex items-center gap-3">
        <i class="fa-solid fa-chart-line text-blue-500"></i>
        Mes Trades
      </h1>
      <p class="text-neutral-500 dark:text-neutral-400 mt-1">
        Historique détaillé de toutes vos transactions
      </p>
    </div>
    <div class="flex items-center gap-3">
      <%= link_to admin_my_trades_path(format: :csv), class: "flex items-center justify-center gap-2 rounded-lg border border-neutral-700 bg-neutral-800 px-4 py-2.5 text-sm font-medium text-neutral-300 transition-colors hover:bg-neutral-700 hover:text-white" do %>
        <i class="fa-solid fa-file-csv"></i>
        Exporter CSV
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-4">
    <%= render 'admin/shared/stat_card', 
        icon: 'fa-hashtag', 
        icon_color: 'blue', 
        label: 'Total Trades', 
        value: @total_trades %>
    
    <%= render 'admin/shared/stat_card', 
        icon: 'fa-euro-sign', 
        icon_color: @total_profit >= 0 ? 'green' : 'red', 
        label: 'Profit Total', 
        value: number_to_currency(@total_profit, unit: "€", format: "%n %u"),
        value_color: @total_profit >= 0 ? 'green' : 'red' %>
    
    <%= render 'admin/shared/stat_card', 
        icon: 'fa-percent', 
        icon_color: 'purple', 
        label: 'Taux de Réussite', 
        value: "#{@win_rate}%" %>
    
    <%= render 'admin/shared/stat_card', 
        icon: 'fa-arrow-up', 
        icon_color: 'green', 
        label: 'Trades Gagnants', 
        value: @winning_trades,
        value_color: 'green' %>
    
    <%= render 'admin/shared/stat_card', 
        icon: 'fa-arrow-down', 
        icon_color: 'red', 
        label: 'Trades Perdants', 
        value: @losing_trades,
        value_color: 'red' %>
  </div>

  <div class="bg-neutral-900 rounded-xl p-5">
    <div class="flex items-center gap-2 mb-4">
      <i class="fa-solid fa-filter text-blue-400"></i>
      <h3 class="text-lg font-semibold text-white">Filtres</h3>
    </div>
    
    <%= form_with url: admin_my_trades_path, method: :get, local: true, class: "space-y-4" do |form| %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-6 gap-4">
        <div>
          <label class="block text-sm font-medium text-neutral-400 mb-1.5">Symbole</label>
          <%= form.text_field :symbol, value: params[:symbol], placeholder: "EURUSD, XAUUSD...", class: "w-full px-3 py-2.5 bg-neutral-800 border border-neutral-700 rounded-lg text-white text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-neutral-400 mb-1.5">Magic Number</label>
          <%= form.text_field :magic_number, value: params[:magic_number], placeholder: "0, 1234...", class: "w-full px-3 py-2.5 bg-neutral-800 border border-neutral-700 rounded-lg text-white text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-neutral-400 mb-1.5">Statut</label>
          <%= form.select :status, options_for_select([['Tous', ''], ['Ouvert', 'open'], ['Fermé', 'closed']], params[:status]), {}, class: "w-full px-3 py-2.5 bg-neutral-800 border border-neutral-700 rounded-lg text-white text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-neutral-400 mb-1.5">Date de début</label>
          <%= form.date_field :date_from, value: params[:date_from], class: "w-full px-3 py-2.5 bg-neutral-800 border border-neutral-700 rounded-lg text-white text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-neutral-400 mb-1.5">Date de fin</label>
          <%= form.date_field :date_to, value: params[:date_to], class: "w-full px-3 py-2.5 bg-neutral-800 border border-neutral-700 rounded-lg text-white text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-neutral-400 mb-1.5">Tri</label>
          <%= form.select :sort, options_for_select([['Date (récent)', ''], ['Symbole', 'symbol'], ['Profit', 'profit'], ['Magic Number', 'magic_number']], params[:sort]), {}, class: "w-full px-3 py-2.5 bg-neutral-800 border border-neutral-700 rounded-lg text-white text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
        </div>
      </div>
      
      <div class="flex items-center gap-3 pt-2">
        <%= form.submit "Filtrer", class: "flex items-center justify-center gap-2 rounded-lg bg-blue-600 px-4 py-2.5 text-sm font-medium text-white transition-colors hover:bg-blue-500 cursor-pointer" %>
        <%= link_to admin_my_trades_path, class: "flex items-center justify-center gap-2 rounded-lg border border-neutral-700 bg-neutral-800 px-4 py-2.5 text-sm font-medium text-neutral-300 transition-colors hover:bg-neutral-700 hover:text-white" do %>
          <i class="fa-solid fa-times text-xs"></i>
          Réinitialiser
        <% end %>
      </div>
    <% end %>
  </div>

  <% if @bot_stats.present? && @bot_stats.any? %>
    <div class="bg-neutral-900 rounded-xl overflow-hidden border border-neutral-800">
      <div class="px-6 py-4 border-b border-neutral-800">
        <h3 class="text-lg font-semibold text-white flex items-center gap-2">
          <i class="fa-solid fa-robot text-purple-400"></i>
          Statistiques par Bot
        </h3>
      </div>
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <% @bot_stats.each do |bot_name, stats| %>
            <div class="bg-neutral-800/50 rounded-xl p-5 border border-neutral-700/50 hover:border-purple-500/50 transition-all">
              <div class="flex items-center justify-between mb-4">
                <h4 class="font-bold text-white text-lg"><%= bot_name %></h4>
                <span class="inline-flex items-center gap-1 rounded-full px-2.5 py-1 text-xs font-medium bg-purple-400/10 text-purple-400 ring-1 ring-inset ring-purple-400/25">
                  <i class="fa-solid fa-hashtag text-[10px]"></i>
                  <%= stats[:magic_number] %>
                </span>
              </div>
              
              <div class="grid grid-cols-2 gap-3 mb-4">
                <div class="bg-neutral-900/50 rounded-lg p-3">
                  <p class="text-xs text-neutral-500 mb-0.5">Trades</p>
                  <p class="text-lg font-bold text-blue-400"><%= stats[:total_trades] %></p>
                </div>
                <div class="bg-neutral-900/50 rounded-lg p-3">
                  <p class="text-xs text-neutral-500 mb-0.5">Profit</p>
                  <p class="text-lg font-bold <%= stats[:total_profit] >= 0 ? 'text-green-400' : 'text-red-400' %>">
                    <%= number_to_currency(stats[:total_profit], unit: "€", format: "%n %u") %>
                  </p>
                </div>
                <div class="bg-neutral-900/50 rounded-lg p-3">
                  <p class="text-xs text-neutral-500 mb-0.5">Taux Réussite</p>
                  <p class="text-lg font-bold text-white"><%= stats[:win_rate] %>%</p>
                </div>
                <div class="bg-neutral-900/50 rounded-lg p-3">
                  <p class="text-xs text-neutral-500 mb-0.5">Profit Moyen</p>
                  <p class="text-lg font-bold <%= stats[:avg_profit] >= 0 ? 'text-green-400' : 'text-red-400' %>">
                    <%= number_to_currency(stats[:avg_profit], unit: "€", format: "%n %u") %>
                  </p>
                </div>
              </div>
              
              <div class="grid grid-cols-2 gap-3">
                <div class="bg-green-500/10 rounded-lg p-3 border border-green-500/20">
                  <p class="text-xs text-green-400/70 mb-0.5">Meilleur Trade</p>
                  <p class="text-sm font-bold text-green-400">
                    <%= number_to_currency(stats[:max_profit], unit: "€", format: "%n %u") %>
                  </p>
                </div>
                <div class="bg-red-500/10 rounded-lg p-3 border border-red-500/20">
                  <p class="text-xs text-red-400/70 mb-0.5">Pire Trade</p>
                  <p class="text-sm font-bold text-red-400">
                    <%= number_to_currency(stats[:max_loss], unit: "€", format: "%n %u") %>
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <% if @symbol_stats.present? && @symbol_stats.any? %>
    <div class="bg-neutral-900 rounded-xl overflow-hidden border border-neutral-800">
      <div class="px-6 py-4 border-b border-neutral-800">
        <h3 class="text-lg font-semibold text-white flex items-center gap-2">
          <i class="fa-solid fa-coins text-amber-400"></i>
          Statistiques par Symbole
        </h3>
      </div>
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead>
            <tr class="bg-neutral-800/50 border-b border-neutral-800">
              <th class="px-6 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wide">Symbole</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wide">Trades</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wide">Profit Total</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wide">Taux Réussite</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wide">Profit Moyen</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-neutral-800">
            <% @symbol_stats.sort_by { |symbol, stats| -stats[:total_profit] }.each do |symbol, stats| %>
              <tr class="hover:bg-neutral-800/30 transition-colors">
                <td class="px-6 py-4">
                  <span class="font-bold text-white"><%= symbol %></span>
                </td>
                <td class="px-6 py-4 text-neutral-300"><%= stats[:total_trades] %></td>
                <td class="px-6 py-4">
                  <span class="font-semibold <%= stats[:total_profit] >= 0 ? 'text-green-400' : 'text-red-400' %>">
                    <%= number_to_currency(stats[:total_profit], unit: "€", format: "%n %u") %>
                  </span>
                </td>
                <td class="px-6 py-4 text-neutral-300"><%= stats[:win_rate] %>%</td>
                <td class="px-6 py-4">
                  <span class="font-semibold <%= stats[:avg_profit] >= 0 ? 'text-green-400' : 'text-red-400' %>">
                    <%= number_to_currency(stats[:avg_profit], unit: "€", format: "%n %u") %>
                  </span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>

  <div class="relative w-full bg-neutral-950 rounded-xl overflow-hidden border border-neutral-800">
    <div class="px-6 py-5 flex flex-col md:flex-row md:items-center md:justify-between gap-4 bg-neutral-900">
      <h2 class="text-lg font-semibold text-white flex items-center gap-2">
        <i class="fa-solid fa-list text-blue-400"></i>
        Mes Trades
      </h2>
      <div class="flex items-center gap-2">
        <%= link_to admin_my_trades_path(format: :csv), class: "flex items-center justify-center gap-2 rounded-lg border border-neutral-700 bg-neutral-800 px-3 py-2 text-sm font-medium text-neutral-300 transition-colors hover:bg-neutral-700 hover:text-white" do %>
          <i class="fa-solid fa-download text-xs"></i>
          Exporter
        <% end %>
      </div>
    </div>

    <% if @trades.present? && @trades.any? %>
      <div class="max-h-[600px] overflow-auto bg-neutral-950">
        <table class="w-full min-w-[900px]">
          <thead class="sticky top-0 z-10">
            <tr class="bg-neutral-900 border-b border-neutral-800">
              <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wide">Date</th>
              <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wide">Symbole</th>
              <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wide">Type</th>
              <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wide">Volume</th>
              <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wide">Prix Ouv.</th>
              <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wide">Prix Ferm.</th>
              <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wide">Profit</th>
              <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wide">Bot</th>
              <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wide">Statut</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-neutral-800">
            <% @trades.each do |trade| %>
              <tr class="hover:bg-neutral-900/50 transition-colors">
                <td class="px-4 py-3">
                  <div class="flex flex-col">
                    <span class="text-sm font-medium text-white"><%= (trade.close_time || trade.open_time)&.strftime("%d/%m/%Y") %></span>
                    <span class="text-xs text-neutral-500"><%= (trade.close_time || trade.open_time)&.strftime("%H:%M") %></span>
                  </div>
                </td>
                <td class="px-4 py-3">
                  <span class="text-sm font-semibold text-white"><%= trade.symbol %></span>
                </td>
                <td class="px-4 py-3">
                  <% if trade.trade_type&.downcase == 'buy' %>
                    <%= render 'admin/shared/status_badge', variant: 'success', label: 'BUY' %>
                  <% else %>
                    <%= render 'admin/shared/status_badge', variant: 'danger', label: 'SELL' %>
                  <% end %>
                </td>
                <td class="px-4 py-3">
                  <span class="text-sm text-neutral-300"><%= trade.volume %></span>
                </td>
                <td class="px-4 py-3">
                  <span class="text-sm text-neutral-300"><%= number_with_precision(trade.open_price, precision: 5) %></span>
                </td>
                <td class="px-4 py-3">
                  <span class="text-sm text-neutral-300"><%= trade.close_price ? number_with_precision(trade.close_price, precision: 5) : '-' %></span>
                </td>
                <td class="px-4 py-3">
                  <span class="text-sm font-semibold <%= trade.profit >= 0 ? 'text-green-400' : 'text-red-400' %>">
                    <%= number_to_currency(trade.profit, unit: "€", format: "%n %u") %>
                  </span>
                </td>
                <td class="px-4 py-3">
                  <% if trade.magic_number.present? %>
                    <span class="inline-flex items-center gap-1.5 rounded-full px-2.5 py-1 text-xs font-medium bg-purple-400/10 text-purple-400 ring-1 ring-inset ring-purple-400/25">
                      <i class="fa-solid fa-robot text-[10px]"></i>
                      <%= bot_name_for_magic_number(trade.magic_number, @bots_cache) %>
                    </span>
                  <% else %>
                    <span class="text-neutral-500">-</span>
                  <% end %>
                </td>
                <td class="px-4 py-3">
                  <% if trade.status == 'closed' %>
                    <%= render 'admin/shared/status_badge', variant: 'success', label: 'Fermé', icon: 'fa-check' %>
                  <% else %>
                    <%= render 'admin/shared/status_badge', variant: 'warning', label: 'Ouvert', pulse: true %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <% if respond_to?(:paginate) && @trades.respond_to?(:current_page) && @trades.total_pages > 1 %>
        <div class="px-6 py-4 border-t border-neutral-800 bg-neutral-900">
          <div class="flex justify-center">
            <%= paginate @trades, theme: 'tailwind' %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-16 px-6 bg-neutral-950">
        <div class="w-20 h-20 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-blue-500/20 to-purple-500/20 flex items-center justify-center">
          <i class="fa-solid fa-chart-line text-4xl text-blue-400"></i>
        </div>
        <h3 class="text-xl font-bold text-white mb-2">Aucun trade trouvé</h3>
        <p class="text-neutral-400 mb-8 max-w-md mx-auto">Aucun trade ne correspond à vos critères de recherche ou vous n'avez pas encore de trades.</p>
        
        <%= link_to admin_my_trades_path, class: "inline-flex items-center justify-center gap-2 rounded-lg bg-gradient-to-r from-blue-500 to-purple-600 px-6 py-3 text-sm font-medium text-white shadow-lg transition-all hover:scale-[1.02]" do %>
          <i class="fa-solid fa-refresh"></i>
          Voir tous les trades
        <% end %>
      </div>
    <% end %>
  </div>
</div>
