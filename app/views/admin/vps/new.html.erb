<!DOCTYPE html>
<html>
<head>
  <title>Nouveau VPS - Admin Trayo</title>
  <%= stylesheet_link_tag "admin" %>
</head>
<body>
  <% @page_title = "Créer un Nouveau VPS" %>
  
  <div class="app-layout">
    <%= render 'admin/shared/sidebar' %>
    
    <div class="main-content">
      <%= render 'admin/shared/navbar' %>
      
      <div class="container" style="max-width: 1200px;">
        <%= link_to "<i class="fa-icon fa-md fa-arrow-left"></i> Retour aux VPS", admin_vps_path, class: "back-link" %>
        
        <h1><i class="fa-icon fa-md fa-desktop"></i> Créer un Nouveau VPS</h1>
        
        <%= render 'form', vps: @vps, clients: @clients %>
      </div>
    </div>
  </div>
</body>
</html>

