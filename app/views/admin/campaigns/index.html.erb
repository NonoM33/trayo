<% content_for :title, "Gestion des Campagnes" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-bold text-white flex items-center gap-3">
      <i class="fa-solid fa-chart-line text-emerald-400"></i>
      Gestion des Campagnes
    </h1>
  </div>

  <!-- Tabs -->
  <div class="flex gap-2 border-b border-neutral-800 pb-0">
    <%= link_to admin_campaigns_path(tab: 'banners'), class: "px-6 py-3 text-sm font-medium transition-all border-b-2 -mb-px #{@tab == 'banners' ? 'border-purple-500 text-purple-400 bg-purple-500/10' : 'border-transparent text-neutral-400 hover:text-white hover:bg-neutral-800/50'} rounded-t-lg" do %>
      <i class="fa-solid fa-rectangle-ad mr-2"></i>Bannières
    <% end %>
    <%= link_to admin_campaigns_path(tab: 'sms'), class: "px-6 py-3 text-sm font-medium transition-all border-b-2 -mb-px #{@tab == 'sms' ? 'border-emerald-500 text-emerald-400 bg-emerald-500/10' : 'border-transparent text-neutral-400 hover:text-white hover:bg-neutral-800/50'} rounded-t-lg" do %>
      <i class="fa-solid fa-comment-sms mr-2"></i>SMS / Email
    <% end %>
  </div>

  <% if @tab == 'banners' %>
    <!-- Bannières Tab -->
    
    <!-- Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <div class="p-5 rounded-2xl bg-neutral-900/80 border border-neutral-800 flex items-center gap-4">
        <div class="w-12 h-12 rounded-xl bg-purple-500/20 flex items-center justify-center">
          <i class="fa-solid fa-rectangle-ad text-purple-400 text-lg"></i>
        </div>
        <div>
          <div class="text-sm text-neutral-400">Total Bannières</div>
          <div class="text-2xl font-bold text-white"><%= @banner_stats[:total] %></div>
        </div>
      </div>
      
      <div class="p-5 rounded-2xl bg-neutral-900/80 border border-neutral-800 flex items-center gap-4">
        <div class="w-12 h-12 rounded-xl bg-emerald-500/20 flex items-center justify-center">
          <i class="fa-solid fa-play text-emerald-400 text-lg"></i>
        </div>
        <div>
          <div class="text-sm text-neutral-400">En Cours</div>
          <div class="text-2xl font-bold text-emerald-400"><%= @banner_stats[:in_progress] %></div>
        </div>
      </div>
      
      <div class="p-5 rounded-2xl bg-neutral-900/80 border border-neutral-800 flex items-center gap-4">
        <div class="w-12 h-12 rounded-xl bg-blue-500/20 flex items-center justify-center">
          <i class="fa-solid fa-clock text-blue-400 text-lg"></i>
        </div>
        <div>
          <div class="text-sm text-neutral-400">Programmées</div>
          <div class="text-2xl font-bold text-blue-400"><%= @banner_stats[:scheduled] %></div>
        </div>
      </div>
      
      <div class="p-5 rounded-2xl bg-neutral-900/80 border border-neutral-800 flex items-center gap-4">
        <div class="w-12 h-12 rounded-xl bg-amber-500/20 flex items-center justify-center">
          <i class="fa-solid fa-toggle-on text-amber-400 text-lg"></i>
        </div>
        <div>
          <div class="text-sm text-neutral-400">Actives</div>
          <div class="text-2xl font-bold text-amber-400"><%= @banner_stats[:active] %></div>
        </div>
      </div>
    </div>

    <!-- Liste des Bannières -->
    <div class="rounded-2xl bg-neutral-900/80 border border-neutral-800 overflow-hidden">
      <div class="p-5 border-b border-neutral-800 flex items-center justify-between">
        <h2 class="text-lg font-semibold text-white flex items-center gap-2">
          <i class="fa-solid fa-rectangle-ad text-purple-400"></i>
          Liste des Bannières
        </h2>
        <%= link_to new_admin_banner_path, class: "inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-purple-600 text-white font-medium hover:bg-purple-700 transition-colors text-sm" do %>
          <i class="fa-solid fa-plus"></i>
          Nouvelle Bannière
        <% end %>
      </div>

      <% if @banners.any? %>
        <table class="w-full">
          <thead class="bg-neutral-800/50">
            <tr>
              <th class="px-5 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wider">Bannière</th>
              <th class="px-5 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wider">Période</th>
              <th class="px-5 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wider">Statut</th>
              <th class="px-5 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wider">Stats</th>
              <th class="px-5 py-3 text-right text-xs font-semibold text-neutral-400 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-neutral-800">
            <% @banners.each do |banner| %>
              <% config = banner.type_config %>
              <tr class="hover:bg-neutral-800/30 transition-colors">
                <td class="px-5 py-4">
                  <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-lg bg-gradient-to-br <%= config[:bg] %> flex items-center justify-center">
                      <i class="fa-solid <%= config[:icon] %> <%= config[:text] %>"></i>
                    </div>
                    <div>
                      <div class="font-medium text-white"><%= banner.title %></div>
                      <div class="text-sm text-neutral-400 truncate max-w-xs"><%= banner.content.to_s.truncate(50) %></div>
                    </div>
                  </div>
                </td>
                <td class="px-5 py-4">
                  <% if banner.starts_at.present? || banner.ends_at.present? %>
                    <div class="text-sm text-white"><%= banner.starts_at&.strftime("%d/%m/%Y") || 'Maintenant' %></div>
                    <div class="text-xs text-neutral-400">au <%= banner.ends_at&.strftime("%d/%m/%Y") || 'Indéfini' %></div>
                  <% else %>
                    <span class="text-sm text-neutral-400">Permanente</span>
                  <% end %>
                </td>
                <td class="px-5 py-4">
                  <% if banner.active_now? %>
                    <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-emerald-500/20 text-emerald-400">
                      <span class="w-1.5 h-1.5 rounded-full bg-emerald-400 animate-pulse"></span>
                      Active
                    </span>
                  <% elsif banner.starts_at.present? && banner.starts_at > Time.current %>
                    <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-blue-500/20 text-blue-400">
                      Programmée
                    </span>
                  <% elsif !banner.is_active %>
                    <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-neutral-700 text-neutral-400">
                      Inactive
                    </span>
                  <% else %>
                    <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-red-500/20 text-red-400">
                      Terminée
                    </span>
                  <% end %>
                </td>
                <td class="px-5 py-4">
                  <div class="flex items-center gap-4 text-sm">
                    <span class="text-neutral-400"><i class="fa-solid fa-eye mr-1"></i><%= banner.views_count %></span>
                    <span class="text-neutral-400"><i class="fa-solid fa-mouse-pointer mr-1"></i><%= banner.clicks_count %></span>
                  </div>
                </td>
                <td class="px-5 py-4">
                  <div class="flex items-center justify-end gap-2">
                    <%= link_to edit_admin_banner_path(banner), class: "w-8 h-8 rounded-lg bg-amber-500/20 text-amber-400 hover:bg-amber-500/30 flex items-center justify-center transition-colors" do %>
                      <i class="fa-solid fa-pen text-sm"></i>
                    <% end %>
                    <%= link_to toggle_admin_banner_path(banner), method: :post, class: "w-8 h-8 rounded-lg #{banner.is_active ? 'bg-emerald-500/20 text-emerald-400 hover:bg-emerald-500/30' : 'bg-neutral-700 text-neutral-400 hover:bg-neutral-600'} flex items-center justify-center transition-colors" do %>
                      <i class="fa-solid fa-<%= banner.is_active ? 'pause' : 'play' %> text-sm"></i>
                    <% end %>
                    <%= link_to admin_banner_path(banner), method: :delete, data: { confirm: "Supprimer cette bannière ?" }, class: "w-8 h-8 rounded-lg bg-red-500/20 text-red-400 hover:bg-red-500/30 flex items-center justify-center transition-colors" do %>
                      <i class="fa-solid fa-trash text-sm"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <div class="p-12 text-center">
          <i class="fa-solid fa-rectangle-ad text-4xl text-neutral-600 mb-4"></i>
          <p class="text-neutral-400 mb-4">Aucune bannière créée</p>
          <%= link_to new_admin_banner_path, class: "inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-purple-600 text-white font-medium hover:bg-purple-700 transition-colors" do %>
            <i class="fa-solid fa-plus"></i>
            Créer une bannière
          <% end %>
        </div>
      <% end %>
    </div>

  <% else %>
    <!-- SMS/Email Tab -->
    
    <!-- Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <div class="p-5 rounded-2xl bg-neutral-900/80 border border-neutral-800 flex items-center gap-4">
        <div class="w-12 h-12 rounded-xl bg-emerald-500/20 flex items-center justify-center">
          <i class="fa-solid fa-comment-sms text-emerald-400 text-lg"></i>
        </div>
        <div>
          <div class="text-sm text-neutral-400">Total Campagnes</div>
          <div class="text-2xl font-bold text-white"><%= @sms_stats[:total] %></div>
        </div>
      </div>
      
      <div class="p-5 rounded-2xl bg-neutral-900/80 border border-neutral-800 flex items-center gap-4">
        <div class="w-12 h-12 rounded-xl bg-blue-500/20 flex items-center justify-center">
          <i class="fa-solid fa-play text-blue-400 text-lg"></i>
        </div>
        <div>
          <div class="text-sm text-neutral-400">En Cours</div>
          <div class="text-2xl font-bold text-blue-400"><%= @sms_stats[:in_progress] %></div>
        </div>
      </div>
      
      <div class="p-5 rounded-2xl bg-neutral-900/80 border border-neutral-800 flex items-center gap-4">
        <div class="w-12 h-12 rounded-xl bg-amber-500/20 flex items-center justify-center">
          <i class="fa-solid fa-clock text-amber-400 text-lg"></i>
        </div>
        <div>
          <div class="text-sm text-neutral-400">Programmées</div>
          <div class="text-2xl font-bold text-amber-400"><%= @sms_stats[:scheduled] %></div>
        </div>
      </div>
      
      <div class="p-5 rounded-2xl bg-neutral-900/80 border border-neutral-800 flex items-center gap-4">
        <div class="w-12 h-12 rounded-xl bg-emerald-500/20 flex items-center justify-center">
          <i class="fa-solid fa-check-circle text-emerald-400 text-lg"></i>
        </div>
        <div>
          <div class="text-sm text-neutral-400">Terminées</div>
          <div class="text-2xl font-bold text-emerald-400"><%= @sms_stats[:completed] %></div>
        </div>
      </div>
    </div>

    <!-- Liste des Campagnes SMS/Email -->
    <div class="rounded-2xl bg-neutral-900/80 border border-neutral-800 overflow-hidden">
      <div class="p-5 border-b border-neutral-800 flex items-center justify-between">
        <h2 class="text-lg font-semibold text-white flex items-center gap-2">
          <i class="fa-solid fa-comment-sms text-emerald-400"></i>
          Liste des Campagnes
        </h2>
        <%= link_to new_admin_sms_campaign_path, class: "inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-emerald-600 text-white font-medium hover:bg-emerald-700 transition-colors text-sm" do %>
          <i class="fa-solid fa-plus"></i>
          Nouvelle Campagne
        <% end %>
      </div>

      <% if @sms_campaigns.any? %>
        <table class="w-full">
          <thead class="bg-neutral-800/50">
            <tr>
              <th class="px-5 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wider">Campagne</th>
              <th class="px-5 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wider">Canal</th>
              <th class="px-5 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wider">Statut</th>
              <th class="px-5 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wider">Progression</th>
              <th class="px-5 py-3 text-right text-xs font-semibold text-neutral-400 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-neutral-800">
            <% @sms_campaigns.each do |campaign| %>
              <tr class="hover:bg-neutral-800/30 transition-colors">
                <td class="px-5 py-4">
                  <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-emerald-500/30 to-teal-500/20 flex items-center justify-center">
                      <i class="fa-solid fa-comment-sms text-emerald-400"></i>
                    </div>
                    <div>
                      <div class="font-medium text-white"><%= campaign.name %></div>
                      <div class="text-sm text-neutral-400"><%= campaign.audience_label %></div>
                    </div>
                  </div>
                </td>
                <td class="px-5 py-4">
                  <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium <%= 
                    case campaign.campaign_type
                    when 'sms' then 'bg-emerald-500/20 text-emerald-400'
                    when 'email' then 'bg-blue-500/20 text-blue-400'
                    else 'bg-purple-500/20 text-purple-400'
                    end
                  %>">
                    <%= campaign.campaign_type_label %>
                  </span>
                </td>
                <td class="px-5 py-4">
                  <% case campaign.status %>
                  <% when 'completed' %>
                    <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-neutral-700 text-neutral-300">
                      Terminée
                    </span>
                  <% when 'sending' %>
                    <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-blue-500/20 text-blue-400">
                      <span class="w-1.5 h-1.5 rounded-full bg-blue-400 animate-pulse"></span>
                      En cours
                    </span>
                  <% when 'scheduled' %>
                    <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-amber-500/20 text-amber-400">
                      Programmée
                    </span>
                  <% else %>
                    <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-neutral-700 text-neutral-400">
                      Brouillon
                    </span>
                  <% end %>
                </td>
                <td class="px-5 py-4">
                  <% if campaign.recipients_count > 0 %>
                    <div class="flex items-center gap-3">
                      <div class="flex-1 h-2 bg-neutral-700 rounded-full overflow-hidden max-w-[120px]">
                        <% progress = campaign.recipients_count > 0 ? (campaign.sent_count.to_f / campaign.recipients_count * 100).round : 0 %>
                        <div class="h-full bg-emerald-500 rounded-full" style="width: <%= progress %>%"></div>
                      </div>
                      <span class="text-sm text-neutral-400"><%= campaign.sent_count %>/<%= campaign.recipients_count %></span>
                    </div>
                  <% else %>
                    <span class="text-neutral-500">—</span>
                  <% end %>
                </td>
                <td class="px-5 py-4">
                  <div class="flex items-center justify-end gap-2">
                    <%= link_to admin_sms_campaign_path(campaign), class: "w-8 h-8 rounded-lg bg-neutral-700 text-neutral-300 hover:bg-neutral-600 flex items-center justify-center transition-colors" do %>
                      <i class="fa-solid fa-eye text-sm"></i>
                    <% end %>
                    <% if campaign.draft? %>
                      <%= link_to edit_admin_sms_campaign_path(campaign), class: "w-8 h-8 rounded-lg bg-amber-500/20 text-amber-400 hover:bg-amber-500/30 flex items-center justify-center transition-colors" do %>
                        <i class="fa-solid fa-pen text-sm"></i>
                      <% end %>
                      <%= link_to send_campaign_admin_sms_campaign_path(campaign), method: :post, data: { confirm: "Envoyer cette campagne à #{campaign.recipients_count} destinataires ?" }, class: "w-8 h-8 rounded-lg bg-emerald-500/20 text-emerald-400 hover:bg-emerald-500/30 flex items-center justify-center transition-colors" do %>
                        <i class="fa-solid fa-play text-sm"></i>
                      <% end %>
                    <% end %>
                    <%= link_to admin_sms_campaign_path(campaign), method: :delete, data: { confirm: "Supprimer cette campagne ?" }, class: "w-8 h-8 rounded-lg bg-red-500/20 text-red-400 hover:bg-red-500/30 flex items-center justify-center transition-colors" do %>
                      <i class="fa-solid fa-trash text-sm"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <div class="p-12 text-center">
          <i class="fa-solid fa-comment-sms text-4xl text-neutral-600 mb-4"></i>
          <p class="text-neutral-400 mb-4">Aucune campagne SMS/Email créée</p>
          <%= link_to new_admin_sms_campaign_path, class: "inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-emerald-600 text-white font-medium hover:bg-emerald-700 transition-colors" do %>
            <i class="fa-solid fa-plus"></i>
            Créer une campagne
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
