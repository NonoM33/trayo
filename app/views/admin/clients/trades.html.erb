<% @page_title = 'Mes Trades' %>

<div class="space-y-6">
  <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
    <div>
      <h1 class="text-3xl font-bold text-neutral-900 dark:text-white tracking-tight flex items-center gap-3">
        <i class="fa-solid fa-chart-line text-blue-500"></i>
        Mes Trades
      </h1>
      <p class="text-neutral-500 dark:text-neutral-400 mt-1">
        Historique détaillé de toutes vos transactions
      </p>
    </div>
    <div class="flex items-center gap-3">
      <%= link_to trades_admin_client_path(@client, format: :xlsx), class: "flex items-center justify-center gap-2 rounded-lg border border-neutral-700 bg-neutral-800 px-4 py-2.5 text-sm font-medium text-neutral-300 transition-colors hover:bg-neutral-700 hover:text-white" do %>
        <i class="fa-solid fa-file-excel"></i>
        Exporter
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
    <%= render 'admin/shared/stat_card', 
        icon: 'fa-hashtag', 
        icon_color: 'blue', 
        label: 'Total Trades', 
        value: @total_trades %>
    
    <%= render 'admin/shared/stat_card', 
        icon: 'fa-euro-sign', 
        icon_color: @total_profit >= 0 ? 'green' : 'red', 
        label: 'Profit Total', 
        value: number_to_currency(@total_profit, unit: "€", format: "%n %u"),
        value_color: @total_profit >= 0 ? 'green' : 'red' %>
    
    <%= render 'admin/shared/stat_card', 
        icon: 'fa-percent', 
        icon_color: 'purple', 
        label: 'Taux de Réussite', 
        value: "#{@win_rate}%" %>
    
    <%= render 'admin/shared/stat_card', 
        icon: 'fa-trophy', 
        icon_color: 'amber', 
        label: 'Trades Gagnants', 
        value: @winning_trades,
        value_color: 'green',
        subtitle: "#{@losing_trades} perdants",
        subtitle_color: 'red-400' %>
  </div>

  <div class="bg-neutral-900 rounded-xl p-5">
    <div class="flex items-center gap-2 mb-4">
      <i class="fa-solid fa-filter text-blue-400"></i>
      <h3 class="text-lg font-semibold text-white">Filtres</h3>
    </div>
    
    <%= form_with url: trades_admin_client_path(@client), method: :get, local: true, class: "space-y-4" do |form| %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-6 gap-4">
        <div>
          <label class="block text-sm font-medium text-neutral-400 mb-1.5">Symbole</label>
          <input type="text" name="symbol" value="<%= params[:symbol] %>" placeholder="EURUSD, XAUUSD..." class="w-full px-3 py-2.5 bg-neutral-800 border border-neutral-700 rounded-lg text-white text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
        </div>
        
        <div>
          <label class="block text-sm font-medium text-neutral-400 mb-1.5">Magic Number</label>
          <input type="text" name="magic_number" value="<%= params[:magic_number] %>" placeholder="0, 1234..." class="w-full px-3 py-2.5 bg-neutral-800 border border-neutral-700 rounded-lg text-white text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
        </div>
        
        <div>
          <label class="block text-sm font-medium text-neutral-400 mb-1.5">Statut</label>
          <select name="status" class="w-full px-3 py-2.5 bg-neutral-800 border border-neutral-700 rounded-lg text-white text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
            <option value="">Tous</option>
            <option value="closed" <%= 'selected' if params[:status] == 'closed' %>>Fermés</option>
            <option value="open" <%= 'selected' if params[:status] == 'open' %>>Ouverts</option>
          </select>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-neutral-400 mb-1.5">Date de début</label>
          <input type="date" name="date_from" value="<%= params[:date_from] %>" class="w-full px-3 py-2.5 bg-neutral-800 border border-neutral-700 rounded-lg text-white text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
        </div>
        
        <div>
          <label class="block text-sm font-medium text-neutral-400 mb-1.5">Date de fin</label>
          <input type="date" name="date_to" value="<%= params[:date_to] %>" class="w-full px-3 py-2.5 bg-neutral-800 border border-neutral-700 rounded-lg text-white text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
        </div>
        
        <div>
          <label class="block text-sm font-medium text-neutral-400 mb-1.5">Tri</label>
          <select name="sort" class="w-full px-3 py-2.5 bg-neutral-800 border border-neutral-700 rounded-lg text-white text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
            <option value="close_time" <%= 'selected' if params[:sort] == 'close_time' || params[:sort].nil? %>>Date (récent)</option>
            <option value="symbol" <%= 'selected' if params[:sort] == 'symbol' %>>Symbole</option>
            <option value="profit" <%= 'selected' if params[:sort] == 'profit' %>>Profit</option>
            <option value="magic_number" <%= 'selected' if params[:sort] == 'magic_number' %>>Magic Number</option>
          </select>
        </div>
      </div>
      
      <div class="flex items-center gap-3 pt-2">
        <button type="submit" class="flex items-center justify-center gap-2 rounded-lg bg-blue-600 px-4 py-2.5 text-sm font-medium text-white transition-colors hover:bg-blue-500">
          <i class="fa-solid fa-filter text-xs"></i>
          Filtrer
        </button>
        <%= link_to trades_admin_client_path(@client), class: "flex items-center justify-center gap-2 rounded-lg border border-neutral-700 bg-neutral-800 px-4 py-2.5 text-sm font-medium text-neutral-300 transition-colors hover:bg-neutral-700 hover:text-white" do %>
          <i class="fa-solid fa-times text-xs"></i>
          Réinitialiser
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="relative w-full bg-neutral-950 rounded-xl overflow-hidden">
    <div class="px-6 py-5 flex flex-col md:flex-row md:items-center md:justify-between gap-4 bg-neutral-900">
      <h2 class="text-lg font-semibold text-white flex items-center gap-2">
        <i class="fa-solid fa-list text-blue-400"></i>
        Mes Trades
      </h2>
      <div class="flex items-center gap-2">
        <%= link_to trades_admin_client_path(@client, format: :xlsx), class: "flex items-center justify-center gap-2 rounded-lg border border-neutral-700 bg-neutral-800 px-3 py-2 text-sm font-medium text-neutral-300 transition-colors hover:bg-neutral-700 hover:text-white" do %>
          <i class="fa-solid fa-download text-xs"></i>
          Exporter
        <% end %>
      </div>
    </div>

    <% if @trades.any? %>
      <div class="max-h-[600px] overflow-auto bg-neutral-950">
        <table class="w-full min-w-[1000px] !bg-transparent !border-0">
          <thead class="sticky top-0 z-10 !bg-neutral-950">
            <tr class="border-b border-neutral-800">
              <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wide">Date</th>
              <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wide">Symbole</th>
              <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wide">Type</th>
              <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wide">Volume</th>
              <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wide">Prix Ouv.</th>
              <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wide">Prix Ferm.</th>
              <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wide">Profit</th>
              <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wide">Commission</th>
              <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wide">Swap</th>
              <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wide">Bot</th>
              <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-400 uppercase tracking-wide">Compte</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-neutral-800">
            <% @trades.each do |trade| %>
              <tr class="hover:bg-neutral-900/50 transition-colors">
                <td class="px-4 py-3">
                  <div class="flex flex-col">
                    <span class="text-sm font-medium text-white"><%= trade.close_time&.strftime("%d/%m/%Y") %></span>
                    <span class="text-xs text-neutral-500"><%= trade.close_time&.strftime("%H:%M") %></span>
                  </div>
                </td>
                <td class="px-4 py-3">
                  <span class="text-sm font-semibold text-white"><%= trade.symbol %></span>
                </td>
                <td class="px-4 py-3">
                  <% if trade.trade_type == 'buy' %>
                    <%= render 'admin/shared/status_badge', variant: 'success', label: 'BUY' %>
                  <% else %>
                    <%= render 'admin/shared/status_badge', variant: 'danger', label: 'SELL' %>
                  <% end %>
                </td>
                <td class="px-4 py-3">
                  <span class="text-sm text-neutral-300"><%= trade.volume %></span>
                </td>
                <td class="px-4 py-3">
                  <span class="text-sm text-neutral-300"><%= number_with_precision(trade.open_price, precision: 5) %></span>
                </td>
                <td class="px-4 py-3">
                  <span class="text-sm text-neutral-300"><%= number_with_precision(trade.close_price, precision: 5) %></span>
                </td>
                <td class="px-4 py-3">
                  <span class="text-sm font-semibold <%= trade.profit >= 0 ? 'text-green-400' : 'text-red-400' %>">
                    <%= number_to_currency(trade.profit, unit: "€", format: "%n %u") %>
                  </span>
                </td>
                <td class="px-4 py-3">
                  <span class="text-sm text-neutral-400"><%= number_to_currency(trade.commission, unit: "€", format: "%n %u") %></span>
                </td>
                <td class="px-4 py-3">
                  <span class="text-sm text-neutral-400"><%= number_to_currency(trade.swap, unit: "€", format: "%n %u") %></span>
                </td>
                <td class="px-4 py-3">
                  <% if trade.magic_number.present? %>
                    <span class="inline-flex items-center gap-1.5 rounded-full px-2.5 py-1 text-xs font-medium bg-purple-400/10 text-purple-400 ring-1 ring-inset ring-purple-400/25">
                      <i class="fa-solid fa-robot text-[10px]"></i>
                      <%= bot_name_for_magic_number(trade.magic_number, @bots_cache) %>
                    </span>
                  <% else %>
                    <span class="text-neutral-500">-</span>
                  <% end %>
                </td>
                <td class="px-4 py-3">
                  <span class="text-sm text-neutral-300"><%= trade.mt5_account.account_name %></span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <%= render 'admin/shared/empty_state',
          icon: 'fa-chart-line',
          icon_color: 'text-blue-400',
          icon_gradient: 'from-blue-500/20 to-purple-500/20',
          title: 'Aucun trade trouvé',
          description: 'Aucun trade ne correspond aux critères de recherche ou vous n\'avez pas encore de trades.' %>
    <% end %>
  </div>

  <% if @trades.respond_to?(:current_page) && @trades.total_pages > 1 %>
    <div class="flex justify-center">
      <nav class="flex items-center gap-1">
        <%= paginate @trades, theme: 'tailwind' %>
      </nav>
    </div>
  <% end %>
</div>
