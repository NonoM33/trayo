<% @page_title = "Créer un Nouvel Utilisateur" %>

<%= link_to "<i class='fa-icon fa-md fa-arrow-left'></i> Retour aux Utilisateurs".html_safe, admin_clients_path, class: "back-link" %>

    <div class="card">
      <h2>Créer un Nouvel Utilisateur</h2>

      <% if @user.errors.any? %>
        <div class="error-messages">
          <strong><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</strong>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @user, url: admin_clients_path, method: :post do |f| %>
        <div class="form-group">
          <%= f.label :email, "Email *" %>
          <%= f.email_field :email, required: true, autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.label :password, "Password *" %>
          <%= f.password_field :password, required: true %>
          <div class="help-text">Minimum 6 characters</div>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirm Password *" %>
          <%= f.password_field :password_confirmation, required: true %>
        </div>

        <div class="form-group">
          <%= f.label :first_name, "First Name" %>
          <%= f.text_field :first_name %>
        </div>

        <div class="form-group">
          <%= f.label :last_name, "Last Name" %>
          <%= f.text_field :last_name %>
        </div>

        <div class="form-group">
          <%= f.label :commission_rate, "Commission Rate (%)" %>
          <%= f.number_field :commission_rate, step: 0.01, min: 0, max: 100, value: 0 %>
          <div class="help-text">0 for administrators, between 0-100 for clients</div>
        </div>

        <div class="form-group">
          <label>User Role *</label>
          <div class="role-selector">
            <div class="role-option">
              <%= f.radio_button :is_admin, false, checked: true, id: "role_client" %>
              <%= f.label :is_admin, for: "role_client" do %>
                <div>
                  <strong>Client</strong>
                  <div class="role-description">
                    Trading client with commission tracking. Can access API and sync MT5 accounts.
                  </div>
                </div>
              <% end %>
            </div>

            <div class="role-option">
              <%= f.radio_button :is_admin, true, id: "role_admin" %>
              <%= f.label :is_admin, for: "role_admin" do %>
                <div>
                  <strong>Administrator</strong>
                  <div class="role-description">
                    Full back office access. Can manage clients, payments, credits, and view all data.
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <%= f.submit "Create User", class: "btn" %>
      <% end %>