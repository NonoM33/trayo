<!DOCTYPE html>
<html>
<head>
  <title>Clients - Admin Trayo</title>
  <%= stylesheet_link_tag "admin" %>
  <style>
    .client-avatar {
      width: 32px;
      height: 32px;
      border-radius: 9999px;
      background: hsl(var(--muted));
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 600;
      font-size: 0.875rem;
      color: hsl(var(--muted-foreground));
      flex-shrink: 0;
    }
    
    .client-info-wrapper {
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }
    
    .client-name {
      font-weight: 600;
    }
    
    .card-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1rem;
    }
    
    .card-header h2 {
      margin: 0;
      border: none;
      padding: 0;
    }
    
    @media (max-width: 1200px) {
      .table-wrapper {
        overflow-x: auto;
      }
      
      table {
        min-width: 800px;
        font-size: 0.875rem;
      }
      
      .info-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
      }
    }
    
    @media (max-width: 768px) {
      .card-header {
        flex-direction: column;
        align-items: stretch;
        gap: 1rem;
      }
      
      .card-header .btn {
        width: 100%;
      }
      
      .client-info-wrapper {
        gap: 0.5rem;
      }
      
      .client-avatar {
        width: 28px;
        height: 28px;
        font-size: 0.75rem;
      }
      
      .client-name {
        font-size: 0.875rem;
      }
      
      table {
        font-size: 0.75rem;
        min-width: 700px;
      }
      
      .status-badge {
        font-size: 0.6875rem;
        padding: 0.25rem 0.5rem;
      }
      
      .info-grid {
        grid-template-columns: 1fr;
        gap: 0.75rem;
      }
    }
    
    @media (max-width: 390px) {
      .client-info-wrapper {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.375rem;
      }
      
      .client-avatar {
        width: 24px;
        height: 24px;
        font-size: 0.6875rem;
      }
    }
  </style>
</head>
<body>
  <% @page_title = 'Gestion des Clients' %>
  
  <!-- Test Font Awesome -->
  
  <div class="app-layout">
    <%= render 'admin/shared/sidebar' %>
    
    <div class="main-content">
      <%= render 'admin/shared/navbar' %>
      
      <div class="container">
        <% if flash[:notice] %>
          <div class="notice"><%= flash[:notice] %></div>
        <% end %>
        <% if flash[:alert] %>
          <div class="alert"><%= flash[:alert] %></div>
        <% end %>

        <div class="info-grid" style="margin-bottom: 1.5rem;">
          <div class="info-item">
            <div class="info-label">Clients</div>
            <div class="info-value"><%= @clients.count %></div>
          </div>
          <div class="info-item">
            <div class="info-label">Profits</div>
            <div class="info-value positive"><%= number_to_currency(@clients.sum(&:total_profits), unit: "€", format: "%n %u") %></div>
          </div>
          <div class="info-item">
            <div class="info-label">Commissions</div>
            <div class="info-value"><%= number_to_currency(@clients.sum(&:total_commission_due), unit: "€", format: "%n %u") %></div>
          </div>
          <div class="info-item">
            <div class="info-label">Admins</div>
            <div class="info-value"><%= @admins.count %></div>
          </div>
        </div>

        <div class="card">
          <div class="card-header">
            <h2>Liste des Clients</h2>
            <%= link_to new_admin_client_path, class: "btn btn-primary" do %>
              Nouvel Utilisateur
            <% end %>
          </div>
          
          <div class="table-wrapper">
            <table>
              <thead>
                <tr>
                  <th>Client</th>
                  <th>Email</th>
                  <th>Commission</th>
                  <th>Gains</th>
                  <th>Due</th>
                  <th>Solde</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @clients.each do |client| %>
                  <tr>
                    <td>
                      <div class="client-info-wrapper">
                        <div class="client-avatar">
                          <%= client.first_name&.first&.upcase || client.email.first.upcase %>
                        </div>
                        <div class="client-name">
                          <%= "#{client.first_name} #{client.last_name}".strip.presence || "N/A" %>
                        </div>
                      </div>
                    </td>
                    <td style="font-size: 0.875rem;"><%= client.email %></td>
                    <td><span class="status-badge" style="background: var(--bg-hover); color: var(--text-primary);"><%= number_to_percentage(client.commission_rate, precision: 1) %></span></td>
                    <td class="<%= client.total_profits > 0 ? 'positive' : '' %>" style="font-weight: 600; font-size: 0.875rem;">
                      <%= number_to_currency(client.total_profits, unit: "€", format: "%n %u") %>
                    </td>
                    <td style="font-weight: 600; font-size: 0.875rem;">
                      <%= number_to_currency(client.total_commission_due, unit: "€", format: "%n %u") %>
                    </td>
                    <td>
                      <% if client.balance_due > 0 %>
                        <span class="status-badge status-rejected">
                          <%= number_to_currency(client.balance_due, unit: "€", format: "%n %u") %>
                        </span>
                      <% elsif client.balance_due < 0 %>
                        <span class="status-badge status-validated">
                          Crédit: <%= number_to_currency(client.balance_due.abs, unit: "€", format: "%n %u") %>
                        </span>
                      <% else %>
                        <span class="text-muted">0 €</span>
                      <% end %>
                    </td>
                    <td>
                      <div class="action-buttons">
                        <%= link_to "Voir", admin_client_path(client), class: "btn btn-outline btn-sm" %>
                        <%= button_to "Supprimer", admin_client_path(client), method: :delete, data: { turbo_confirm: "Supprimer cet utilisateur ?" }, class: "btn btn-danger btn-sm" %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

        <div class="card">
          <h2>Administrateurs</h2>
          
          <div class="table-wrapper">
            <table>
              <thead>
                <tr>
                  <th>Nom</th>
                  <th>Email</th>
                  <th>Créé le</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @admins.each do |admin| %>
                  <tr>
                    <td>
                      <div class="client-info-wrapper">
                        <div class="client-avatar">
                          <%= admin.first_name&.first&.upcase || admin.email.first.upcase %>
                        </div>
                        <div class="client-name">
                          <%= "#{admin.first_name} #{admin.last_name}".strip.presence || "N/A" %>
                        </div>
                      </div>
                    </td>
                    <td style="font-size: 0.875rem;"><%= admin.email %></td>
                    <td style="font-size: 0.875rem;"><%= admin.created_at.strftime("%d/%m/%Y") %></td>
                    <td>
                      <% if admin.id != current_user.id %>
                        <%= button_to "Supprimer", admin_client_path(admin), method: :delete, data: { turbo_confirm: "Supprimer cet admin ?" }, class: "btn btn-danger btn-sm" %>
                      <% else %>
                        <span class="status-badge status-inactive">Utilisateur actuel</span>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
