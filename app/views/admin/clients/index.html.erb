<% @page_title = 'Gestion des Clients' %>

<div class="space-y-6" style="position: relative; z-index: 1;">
  <% if flash[:notice] %>
    <div class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 text-green-800 dark:text-green-200 px-4 py-3 rounded-lg">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 text-red-800 dark:text-red-200 px-4 py-3 rounded-lg">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 border border-gray-200 dark:border-gray-700">
      <div class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-1">Clients</div>
      <div class="text-2xl font-bold text-gray-900 dark:text-white"><%= @clients.count %></div>
    </div>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 border border-gray-200 dark:border-gray-700">
      <div class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-1">Profits</div>
      <div class="text-2xl font-bold <%= @clients.sum(&:total_profits) >= 0 ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400' %>">
        <%= number_to_currency(@clients.sum(&:total_profits), unit: "€", format: "%n %u") %>
      </div>
      <div class="text-xs text-gray-500 dark:text-gray-400 mt-1">Gains réels + retraits</div>
    </div>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 border border-gray-200 dark:border-gray-700">
      <div class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-1">Gain Moyen Journalier (30j)</div>
      <div class="text-2xl font-bold <%= @average_daily_gain_all >= 0 ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400' %>">
        <%= number_to_currency(@average_daily_gain_all, unit: "€", format: "%n %u") %>
      </div>
      <div class="text-xs text-gray-500 dark:text-gray-400 mt-1">Tous comptes confondus</div>
    </div>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 border border-gray-200 dark:border-gray-700">
      <div class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-1">Commissions Dues</div>
      <div class="text-2xl font-bold text-green-600 dark:text-green-400">
        <%= number_to_currency(@clients.sum { |c| c.total_commission_due || 0 }, unit: "€", format: "%n %u") %>
      </div>
      <div class="text-xs text-gray-500 dark:text-gray-400 mt-1">Total commissions sans crédits</div>
    </div>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 border border-gray-200 dark:border-gray-700">
      <div class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-1">Admins</div>
      <div class="text-2xl font-bold text-gray-900 dark:text-white"><%= @admins.count %></div>
    </div>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md border border-gray-200 dark:border-gray-700">
    <div class="p-6 border-b border-gray-200 dark:border-gray-700 flex flex-col md:flex-row md:items-center md:justify-between gap-4">
      <h2 class="text-xl font-bold text-gray-900 dark:text-white">Liste des Clients</h2>
      <div class="flex gap-3">
        <%= link_to new_admin_mt5_token_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors font-medium" do %>
          <i class="fa-solid fa-ticket-alt"></i>
          Générer un token MT5
        <% end %>
        <%= link_to new_admin_client_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors font-medium" do %>
          <i class="fa-solid fa-plus"></i>
          Nouvel Utilisateur
        <% end %>
      </div>
    </div>
    
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gray-50 dark:bg-gray-900">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Client</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Commission</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Gains</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Écart WM</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Solde</th>
          </tr>
        </thead>
        <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
          <% @clients.each do |client| %>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 cursor-pointer transition-colors" onclick="window.location.href='<%= admin_client_path(client) %>'">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center gap-3">
                  <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-semibold text-sm">
                    <%= client.first_name&.first&.upcase || client.email.first.upcase %>
                  </div>
                  <div class="font-semibold text-gray-900 dark:text-white">
                    <%= "#{client.first_name} #{client.last_name}".strip.presence || "N/A" %>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200">
                  <%= number_to_percentage(client.commission_rate, precision: 1) %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="font-semibold <%= client.total_profits >= 0 ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400' %>">
                  <%= number_to_currency(client.total_profits, unit: "€", format: "%n %u") %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% diff = client.watermark_difference %>
                <span class="font-bold <%= diff >= 0 ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400' %>">
                  <%= number_to_currency(diff, unit: "€", format: "%n %u") %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if client.balance_due > 0 %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-200">
                    <%= number_to_currency(client.balance_due, unit: "€", format: "%n %u") %>
                  </span>
                <% elsif client.balance_due < 0 %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-200">
                    Crédit: <%= number_to_currency(client.balance_due.abs, unit: "€", format: "%n %u") %>
                  </span>
                <% else %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-400">
                    0,00 €
                  </span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md border border-gray-200 dark:border-gray-700">
    <div class="p-6 border-b border-gray-200 dark:border-gray-700">
      <h2 class="text-xl font-bold text-gray-900 dark:text-white">Administrateurs</h2>
    </div>
    
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gray-50 dark:bg-gray-900">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Nom</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Email</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Créé le</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
          <% @admins.each do |admin| %>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center gap-3">
                  <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-semibold text-sm">
                    <%= admin.first_name&.first&.upcase || admin.email.first.upcase %>
                  </div>
                  <div class="font-semibold text-gray-900 dark:text-white">
                    <%= "#{admin.first_name} #{admin.last_name}".strip.presence || "N/A" %>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600 dark:text-gray-400">
                <%= admin.email %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600 dark:text-gray-400">
                <%= admin.created_at.strftime("%d/%m/%Y") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if admin.id != current_user.id %>
                  <%= button_to "Supprimer", admin_client_path(admin), method: :delete, data: { turbo_confirm: "Supprimer cet admin ?" }, class: "px-3 py-1 text-sm bg-red-600 hover:bg-red-700 text-white rounded-lg transition-colors font-medium" %>
                <% else %>
                  <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-400">
                    Utilisateur actuel
                  </span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
