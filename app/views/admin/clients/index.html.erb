<% @page_title = 'Gestion des Clients' %>

<div class="space-y-6">
  <% if flash[:notice] %>
    <div class="flex items-center gap-3 p-4 rounded-xl border border-green-200 dark:border-green-800/50 bg-green-50 dark:bg-green-900/20">
      <i class="fa-solid fa-check-circle text-green-600 dark:text-green-400"></i>
      <p class="text-green-800 dark:text-green-200"><%= flash[:notice] %></p>
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div class="flex items-center gap-3 p-4 rounded-xl border border-red-200 dark:border-red-800/50 bg-red-50 dark:bg-red-900/20">
      <i class="fa-solid fa-exclamation-circle text-red-600 dark:text-red-400"></i>
      <p class="text-red-800 dark:text-red-200"><%= flash[:alert] %></p>
    </div>
  <% end %>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-4">
    <div class="bg-white dark:bg-neutral-800 border border-black/10 dark:border-white/10 overflow-hidden rounded-xl shadow-xs">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-neutral-500 dark:text-neutral-400 truncate">Total Clients</dt>
        <dd class="mt-1 text-3xl font-semibold text-neutral-900 dark:text-white"><%= @clients.count %></dd>
        <div class="mt-4">
          <span class="text-sm font-medium text-blue-600 dark:text-blue-400">
            <i class="fa-solid fa-users mr-1"></i>Actifs
          </span>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-neutral-800 border border-black/10 dark:border-white/10 overflow-hidden rounded-xl shadow-xs">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-neutral-500 dark:text-neutral-400 truncate">Profits Totaux</dt>
        <dd class="mt-1 text-3xl font-semibold <%= @clients.sum(&:total_profits) >= 0 ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400' %>">
        <%= number_to_currency(@clients.sum(&:total_profits), unit: "€", format: "%n %u") %>
        </dd>
        <div class="mt-4">
          <span class="text-sm font-medium <%= @clients.sum(&:total_profits) >= 0 ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400' %>">
            <i class="fa-solid fa-arrow-<%= @clients.sum(&:total_profits) >= 0 ? 'up' : 'down' %> mr-1"></i>
            <%= @clients.sum(&:total_profits) >= 0 ? 'Positif' : 'Négatif' %>
          </span>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-neutral-800 border border-black/10 dark:border-white/10 overflow-hidden rounded-xl shadow-xs">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-neutral-500 dark:text-neutral-400 truncate">Gain Moyen / Jour</dt>
        <dd class="mt-1 text-3xl font-semibold <%= @average_daily_gain_all >= 0 ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400' %>">
        <%= number_to_currency(@average_daily_gain_all, unit: "€", format: "%n %u") %>
        </dd>
        <div class="mt-4">
          <span class="text-sm font-medium text-neutral-500 dark:text-neutral-400">
            <i class="fa-solid fa-calendar mr-1"></i>Sur 30 jours
          </span>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-neutral-800 border border-black/10 dark:border-white/10 overflow-hidden rounded-xl shadow-xs">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-neutral-500 dark:text-neutral-400 truncate">Commissions Dues</dt>
        <dd class="mt-1 text-3xl font-semibold text-green-600 dark:text-green-400">
        <%= number_to_currency(@clients.sum { |c| c.total_commission_due || 0 }, unit: "€", format: "%n %u") %>
        </dd>
        <div class="mt-4">
          <span class="text-sm font-medium text-green-600 dark:text-green-400">
            <i class="fa-solid fa-coins mr-1"></i>À percevoir
          </span>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-neutral-800 border border-black/10 dark:border-white/10 overflow-hidden rounded-xl shadow-xs">
      <div class="px-4 py-5 sm:p-6">
        <dt class="text-sm font-medium text-neutral-500 dark:text-neutral-400 truncate">Administrateurs</dt>
        <dd class="mt-1 text-3xl font-semibold text-neutral-900 dark:text-white"><%= @admins.count %></dd>
        <div class="mt-4">
          <span class="text-sm font-medium text-indigo-600 dark:text-indigo-400">
            <i class="fa-solid fa-shield mr-1"></i>Avec accès admin
          </span>
        </div>
      </div>
    </div>
  </div>

  <div class="relative w-full bg-neutral-950 rounded-xl border border-white/10 overflow-hidden"
       data-controller="scroll-area"
       data-scroll-area-target="root"
       data-action="mouseenter->scroll-area#onRootMouseEnter mouseleave->scroll-area#onRootMouseLeave">

    <div class="px-6 py-5 border-b border-white/10 flex flex-col md:flex-row md:items-center md:justify-between gap-4 bg-neutral-900">
      <h2 class="text-lg font-semibold text-white">Liste des Clients</h2>
      <div class="flex gap-2">
        <div data-controller="slideover">
          <button type="button" data-action="slideover#show:prevent" class="flex items-center justify-center gap-1.5 rounded-lg border border-neutral-700 bg-neutral-800 px-3.5 py-2 text-sm font-medium whitespace-nowrap text-neutral-100 shadow-xs transition-all duration-100 ease-in-out select-none hover:bg-neutral-700">
            <i class="fa-solid fa-key"></i>
            <span>Token MT5</span>
          </button>

          <dialog data-slideover-target="dialog" data-action="mousedown->slideover#backdropClose" class="slideover slideover-right fixed inset-0 m-0 ml-auto h-dvh max-h-full border-l border-neutral-800 outline-hidden bg-transparent p-0">
            <div class="flex h-full w-80 flex-col bg-neutral-950 shadow-2xl sm:w-96 lg:w-[520px]">
              <div class="flex items-center justify-between border-b border-neutral-800 bg-neutral-900 px-6 py-5">
                <h4 class="text-lg font-semibold text-white">Générer un Token MT5</h4>
                <button type="button" data-action="slideover#hide:prevent" class="rounded-full p-2 text-neutral-400 transition-colors hover:bg-neutral-800 hover:text-white">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="18" x2="6" y1="6" y2="18"></line>
                    <line x1="6" x2="18" y1="6" y2="18"></line>
                  </svg>
                </button>
              </div>
              
              <turbo-frame id="mt5_token_content" class="flex-1 flex flex-col min-h-0">
                <div class="flex-1 overflow-y-auto p-6 bg-neutral-950">
                  <div class="text-center py-8">
                    <div class="w-20 h-20 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-purple-600 to-blue-600 flex items-center justify-center shadow-lg shadow-purple-600/25">
                      <i class="fa-solid fa-ticket-alt text-3xl text-white"></i>
                    </div>
                    <h3 class="text-xl font-semibold text-white mb-2">Token MT5</h3>
                    <p class="text-neutral-400 mb-8 max-w-sm mx-auto">Générez un token unique pour connecter un script MT5 à la plateforme Trayo.</p>
                    
                    <%= form_with url: admin_mt5_tokens_path, method: :post, data: { turbo_frame: "mt5_token_content" } do %>
                      <button type="submit" class="inline-flex items-center justify-center gap-2 rounded-lg bg-gradient-to-r from-purple-600 to-blue-600 px-6 py-3 text-sm font-medium text-white shadow-lg shadow-purple-600/25 transition-all hover:shadow-purple-500/40 hover:scale-[1.02] cursor-pointer">
                        <i class="fa-solid fa-magic"></i>
                        Générer un nouveau token
                      </button>
                    <% end %>
                  </div>

                  <div class="mt-8 p-4 rounded-xl border border-neutral-800 bg-neutral-900">
                    <h4 class="text-sm font-medium text-neutral-300 mb-3 flex items-center gap-2">
                      <i class="fa-solid fa-info-circle text-blue-400"></i>
                      Comment utiliser le token ?
                    </h4>
                    <ol class="space-y-2 text-sm text-neutral-400">
                      <li class="flex items-start gap-2">
                        <span class="flex-shrink-0 w-5 h-5 rounded-full bg-neutral-800 flex items-center justify-center text-xs text-neutral-300">1</span>
                        <span>Copiez le token généré</span>
                      </li>
                      <li class="flex items-start gap-2">
                        <span class="flex-shrink-0 w-5 h-5 rounded-full bg-neutral-800 flex items-center justify-center text-xs text-neutral-300">2</span>
                        <span>Collez-le dans votre script TrayoSync.mq5</span>
                      </li>
                      <li class="flex items-start gap-2">
                        <span class="flex-shrink-0 w-5 h-5 rounded-full bg-neutral-800 flex items-center justify-center text-xs text-neutral-300">3</span>
                        <span>Le client sera créé automatiquement</span>
                      </li>
                    </ol>
                  </div>
                </div>
              </turbo-frame>
            </div>
          </dialog>
        </div>
        
        <div data-controller="slideover">
          <button type="button" data-action="slideover#show:prevent" class="flex items-center justify-center gap-1.5 rounded-lg border border-emerald-400/30 bg-emerald-600 px-3.5 py-2 text-sm font-medium whitespace-nowrap text-white shadow-sm transition-all duration-100 ease-in-out select-none hover:bg-emerald-500">
            <i class="fa-solid fa-envelope"></i>
            <span>Invitation</span>
          </button>

          <dialog data-slideover-target="dialog" data-action="mousedown->slideover#backdropClose" class="slideover slideover-right fixed inset-0 m-0 ml-auto h-dvh max-h-full border-l border-neutral-800 outline-hidden bg-transparent p-0">
            <div class="flex h-full w-80 flex-col bg-neutral-950 shadow-2xl sm:w-96 lg:w-[420px]">
              <div class="flex items-center justify-between border-b border-neutral-800 bg-neutral-900 px-6 py-5">
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-emerald-500 to-green-600 flex items-center justify-center text-white shadow-lg shadow-emerald-500/20">
                    <i class="fa-solid fa-envelope"></i>
                  </div>
                  <h4 class="text-lg font-semibold text-white">Nouvelle Invitation</h4>
                </div>
                <button type="button" data-action="slideover#hide:prevent" class="rounded-full p-2 text-neutral-400 transition-colors hover:bg-neutral-800 hover:text-white">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="18" x2="6" y1="6" y2="18"></line>
                    <line x1="6" x2="18" y1="6" y2="18"></line>
                  </svg>
                </button>
              </div>
              
              <%= form_with model: Invitation.new, url: admin_invitations_path, method: :post, class: "flex flex-1 flex-col min-h-0" do |f| %>
                <div class="flex-1 overflow-y-auto p-6 space-y-6 bg-neutral-950">
                  <div class="text-center py-4">
                    <p class="text-neutral-300">Une invitation permet à un nouveau client de s'inscrire via un lien unique.</p>
                  </div>
                  
                  <div>
                    <label class="block text-sm font-medium text-neutral-300 mb-2">Date d'expiration (optionnel)</label>
                    <%= f.date_field :expires_at, class: "w-full px-4 py-3 bg-neutral-900 border border-neutral-800 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all" %>
                    <p class="mt-2 text-xs text-neutral-500">Laisser vide pour une expiration dans 30 jours</p>
                  </div>
                  
                  <div class="p-4 rounded-xl border border-neutral-800 bg-neutral-900">
                    <h5 class="text-sm font-medium text-neutral-300 mb-3 flex items-center gap-2">
                      <i class="fa-solid fa-info-circle text-emerald-400"></i>
                      Comment ça marche ?
                    </h5>
                    <ol class="space-y-2 text-sm text-neutral-400">
                      <li class="flex items-start gap-2">
                        <span class="flex-shrink-0 w-5 h-5 rounded-full bg-neutral-800 flex items-center justify-center text-xs text-neutral-300">1</span>
                        <span>Un code unique sera généré</span>
                      </li>
                      <li class="flex items-start gap-2">
                        <span class="flex-shrink-0 w-5 h-5 rounded-full bg-neutral-800 flex items-center justify-center text-xs text-neutral-300">2</span>
                        <span>Partagez le lien avec votre client</span>
                      </li>
                      <li class="flex items-start gap-2">
                        <span class="flex-shrink-0 w-5 h-5 rounded-full bg-neutral-800 flex items-center justify-center text-xs text-neutral-300">3</span>
                        <span>Le client suit les 4 étapes d'onboarding</span>
                      </li>
                      <li class="flex items-start gap-2">
                        <span class="flex-shrink-0 w-5 h-5 rounded-full bg-neutral-800 flex items-center justify-center text-xs text-neutral-300">4</span>
                        <span>Son compte est créé automatiquement</span>
                      </li>
                    </ol>
                  </div>
                </div>
                
                <div class="flex items-center gap-3 border-t border-neutral-800 bg-neutral-900 px-6 py-5">
                  <%= f.submit "Créer l'invitation", class: "flex-1 flex items-center justify-center gap-2 rounded-lg bg-emerald-600 px-5 py-2.5 text-sm font-medium text-white shadow-lg shadow-emerald-600/25 transition-all hover:bg-emerald-500 hover:shadow-emerald-500/30 cursor-pointer" %>
                  <button data-action="slideover#hide:prevent" type="button" class="flex items-center justify-center gap-2 rounded-lg border border-neutral-700 bg-neutral-800 px-5 py-2.5 text-sm font-medium text-neutral-300 transition-all hover:bg-neutral-700 hover:text-white">Annuler</button>
                </div>
        <% end %>
            </div>
          </dialog>
        </div>
        
        <div data-controller="slideover">
          <button type="button" data-action="slideover#show:prevent" class="flex items-center justify-center gap-1.5 rounded-lg border border-blue-400/30 bg-blue-600 px-3.5 py-2 text-sm font-medium whitespace-nowrap text-white shadow-sm transition-all duration-100 ease-in-out select-none hover:bg-blue-500">
          <i class="fa-solid fa-plus"></i>
            <span>Utilisateur</span>
          </button>

          <dialog data-slideover-target="dialog" data-action="mousedown->slideover#backdropClose" class="slideover slideover-right fixed inset-0 m-0 ml-auto h-dvh max-h-full border-l border-neutral-800 outline-hidden bg-transparent p-0">
            <div class="flex h-full w-80 flex-col bg-neutral-950 shadow-2xl sm:w-96 lg:w-[480px]">
              <div class="flex items-center justify-between border-b border-neutral-800 bg-neutral-900 px-6 py-5">
                <h4 class="text-lg font-semibold text-white">Nouvel Utilisateur</h4>
                <button type="button" data-action="slideover#hide:prevent" class="rounded-full p-2 text-neutral-400 transition-colors hover:bg-neutral-800 hover:text-white">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="18" x2="6" y1="6" y2="18"></line>
                    <line x1="6" x2="18" y1="6" y2="18"></line>
                  </svg>
                </button>
              </div>
              
              <%= form_with model: User.new, url: admin_clients_path, method: :post, class: "flex flex-1 flex-col min-h-0" do |f| %>
                <div class="flex-1 overflow-y-auto p-6 space-y-5 bg-neutral-950">
                  <div>
                    <label class="block text-sm font-medium text-neutral-300 mb-2">Email *</label>
                    <%= f.email_field :email, required: true, autofocus: true, placeholder: "email@exemple.com", class: "w-full px-4 py-3 bg-neutral-900 border border-neutral-800 rounded-lg text-white placeholder-neutral-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
                  </div>

                  <div>
                    <label class="block text-sm font-medium text-neutral-300 mb-2">Mot de passe *</label>
                    <%= f.password_field :password, required: true, placeholder: "••••••••", class: "w-full px-4 py-3 bg-neutral-900 border border-neutral-800 rounded-lg text-white placeholder-neutral-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
                    <p class="mt-2 text-xs text-neutral-500">Minimum 6 caractères</p>
                  </div>

                  <div>
                    <label class="block text-sm font-medium text-neutral-300 mb-2">Confirmer le mot de passe *</label>
                    <%= f.password_field :password_confirmation, required: true, placeholder: "••••••••", class: "w-full px-4 py-3 bg-neutral-900 border border-neutral-800 rounded-lg text-white placeholder-neutral-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
                  </div>

                  <div class="grid grid-cols-2 gap-4">
                    <div>
                      <label class="block text-sm font-medium text-neutral-300 mb-2">Prénom</label>
                      <%= f.text_field :first_name, placeholder: "Jean", class: "w-full px-4 py-3 bg-neutral-900 border border-neutral-800 rounded-lg text-white placeholder-neutral-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
                    </div>
                    <div>
                      <label class="block text-sm font-medium text-neutral-300 mb-2">Nom</label>
                      <%= f.text_field :last_name, placeholder: "Dupont", class: "w-full px-4 py-3 bg-neutral-900 border border-neutral-800 rounded-lg text-white placeholder-neutral-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
                    </div>
                  </div>

                  <div>
                    <label class="block text-sm font-medium text-neutral-300 mb-2">Taux de commission (%)</label>
                    <%= f.number_field :commission_rate, step: 0.01, min: 0, max: 100, value: 25, class: "w-full px-4 py-3 bg-neutral-900 border border-neutral-800 rounded-lg text-white placeholder-neutral-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
                    <p class="mt-2 text-xs text-neutral-500">0 pour les administrateurs, entre 0-100 pour les clients</p>
                  </div>

                  <div>
                    <label class="block text-sm font-medium text-neutral-300 mb-3">Rôle *</label>
                    <div class="space-y-3">
                      <label class="flex items-start gap-4 p-4 rounded-xl border border-neutral-800 bg-neutral-900 cursor-pointer hover:border-neutral-700 hover:bg-neutral-800/50 transition-all group">
                        <%= f.radio_button :is_admin, false, checked: true, class: "mt-0.5 w-4 h-4 text-blue-600 bg-neutral-800 border-neutral-700 focus:ring-blue-500 focus:ring-offset-neutral-900" %>
                        <div class="flex-1">
                          <p class="font-medium text-white group-hover:text-blue-400 transition-colors">Client</p>
                          <p class="text-sm text-neutral-500 mt-1">Client trading avec suivi des commissions. Peut accéder à l'API et synchroniser les comptes MT5.</p>
                        </div>
                      </label>
                      <label class="flex items-start gap-4 p-4 rounded-xl border border-neutral-800 bg-neutral-900 cursor-pointer hover:border-neutral-700 hover:bg-neutral-800/50 transition-all group">
                        <%= f.radio_button :is_admin, true, class: "mt-0.5 w-4 h-4 text-blue-600 bg-neutral-800 border-neutral-700 focus:ring-blue-500 focus:ring-offset-neutral-900" %>
                        <div class="flex-1">
                          <p class="font-medium text-white group-hover:text-blue-400 transition-colors">Administrateur</p>
                          <p class="text-sm text-neutral-500 mt-1">Accès complet au back office. Peut gérer les clients, paiements, crédits et voir toutes les données.</p>
                        </div>
                      </label>
                    </div>
                  </div>
                </div>
                
                <div class="flex items-center gap-3 border-t border-neutral-800 bg-neutral-900 px-6 py-5">
                  <%= f.submit "Créer l'utilisateur", class: "flex-1 sm:flex-none flex items-center justify-center gap-2 rounded-lg bg-blue-600 px-5 py-2.5 text-sm font-medium text-white shadow-lg shadow-blue-600/25 transition-all hover:bg-blue-500 hover:shadow-blue-500/30 cursor-pointer" %>
                  <button data-action="slideover#hide:prevent" type="button" class="flex items-center justify-center gap-2 rounded-lg border border-neutral-700 bg-neutral-800 px-5 py-2.5 text-sm font-medium text-neutral-300 transition-all hover:bg-neutral-700 hover:text-white">Annuler</button>
                </div>
        <% end %>
            </div>
          </dialog>
        </div>
      </div>
    </div>
    
    <div data-scroll-area-target="viewport"
         data-action="scroll->scroll-area#onViewportScroll"
         class="max-h-[500px] overflow-auto scrollbar-hide bg-neutral-950">
      <table class="w-full min-w-[800px]">
        <thead class="sticky top-0 z-10 bg-neutral-900">
          <tr class="*:py-3 *:text-left *:align-middle *:[box-shadow:inset_0_-1px_0_0_rgb(46_46_46)]">
            <th scope="col" class="px-6 text-sm font-semibold text-neutral-100">Client</th>
            <th scope="col" class="px-6 text-sm font-semibold text-neutral-100">Commission</th>
            <th scope="col" class="px-6 text-sm font-semibold text-neutral-100">Gains</th>
            <th scope="col" class="px-6 text-sm font-semibold text-neutral-100">Écart WM</th>
            <th scope="col" class="px-6 text-sm font-semibold text-neutral-100">Solde</th>
          </tr>
        </thead>
        <tbody class="*:even:bg-neutral-900/50 *:*:py-4 bg-neutral-950">
          <% @clients.each do |client| %>
            <tr class="cursor-pointer hover:bg-neutral-800 transition-colors" onclick="window.location.href='<%= admin_client_path(client) %>'">
              <td class="px-6 text-sm">
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-semibold text-sm shrink-0">
                    <%= client.first_name&.first&.upcase || client.email.first.upcase %>
                  </div>
                  <div>
                    <p class="font-medium text-white">
                    <%= "#{client.first_name} #{client.last_name}".strip.presence || "N/A" %>
                    </p>
                    <p class="text-neutral-400"><%= client.email %></p>
                  </div>
                </div>
              </td>
              <td class="px-6 text-sm text-neutral-400">
                  <%= number_to_percentage(client.commission_rate, precision: 1) %>
              </td>
              <td class="px-6">
                <span class="text-sm font-medium <%= client.total_profits >= 0 ? 'text-green-400' : 'text-red-400' %>">
                  <%= number_to_currency(client.total_profits, unit: "€", format: "%n %u") %>
                </span>
              </td>
              <td class="px-6">
                <% diff = client.watermark_difference %>
                <span class="text-sm font-medium <%= diff >= 0 ? 'text-green-400' : 'text-red-400' %>">
                  <%= number_to_currency(diff, unit: "€", format: "%n %u") %>
                </span>
              </td>
              <td class="px-6">
                <% if client.balance_due > 0 %>
                  <span class="inline-flex items-center gap-1 rounded-full px-2 py-1 text-xs font-medium bg-yellow-400/10 text-yellow-500 ring-1 ring-inset ring-yellow-400/25">
                    <%= number_to_currency(client.balance_due, unit: "€", format: "%n %u") %>
                  </span>
                <% elsif client.balance_due < 0 %>
                  <span class="inline-flex items-center gap-1 rounded-full px-2 py-1 text-xs font-medium bg-red-400/10 text-red-400 ring-1 ring-inset ring-red-400/25">
                    Crédit: <%= number_to_currency(client.balance_due.abs, unit: "€", format: "%n %u") %>
                  </span>
                <% else %>
                  <span class="inline-flex items-center gap-1 rounded-full px-2 py-1 text-xs font-medium bg-green-400/10 text-green-400 ring-1 ring-inset ring-green-400/25">
                    <i class="fa-solid fa-check text-xs"></i>
                    0,00 €
                  </span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div data-scroll-area-target="scrollbar"
         data-scroll-area-orientation-value="vertical"
         data-action="click->scroll-area#onScrollbarClick"
         class="absolute right-2 top-20 bottom-4 flex w-1.5 justify-center rounded-full bg-black/5 backdrop-blur-sm opacity-0 transition-opacity duration-150 delay-300 pointer-events-none data-[hovering]:opacity-100 data-[hovering]:duration-100 data-[hovering]:delay-0 data-[hovering]:pointer-events-auto data-[scrolling]:opacity-100 data-[scrolling]:duration-100 data-[scrolling]:delay-0 data-[scrolling]:pointer-events-auto data-[visible=false]:hidden dark:bg-white/10">
      <div data-scroll-area-target="thumb"
           data-action="mousedown->scroll-area#onThumbMouseDown"
           class="relative w-full rounded-full bg-neutral-500 transition-opacity duration-100 dark:bg-neutral-400"></div>
    </div>
  </div>

  <div class="relative w-full bg-neutral-950 rounded-xl border border-white/10 overflow-hidden"
       data-controller="scroll-area"
       data-scroll-area-target="root"
       data-action="mouseenter->scroll-area#onRootMouseEnter mouseleave->scroll-area#onRootMouseLeave">

    <div class="px-6 py-5 border-b border-white/10 bg-neutral-900">
      <h2 class="text-lg font-semibold text-white">Administrateurs</h2>
    </div>
    
    <div data-scroll-area-target="viewport"
         data-action="scroll->scroll-area#onViewportScroll"
         class="max-h-[400px] overflow-auto scrollbar-hide bg-neutral-950">
      <table class="w-full min-w-[600px]">
        <thead class="sticky top-0 z-10 bg-neutral-900">
          <tr class="*:py-3 *:text-left *:align-middle *:[box-shadow:inset_0_-1px_0_0_rgb(46_46_46)]">
            <th scope="col" class="px-6 text-sm font-semibold text-neutral-100">Nom</th>
            <th scope="col" class="px-6 text-sm font-semibold text-neutral-100">Email</th>
            <th scope="col" class="px-6 text-sm font-semibold text-neutral-100">Créé le</th>
            <th scope="col" class="px-6 text-sm font-semibold text-neutral-100">Actions</th>
          </tr>
        </thead>
        <tbody class="*:even:bg-neutral-900/50 *:*:py-4 bg-neutral-950">
          <% @admins.each do |admin| %>
            <tr class="hover:bg-neutral-800 transition-colors">
              <td class="px-6 text-sm">
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-full flex items-center justify-center text-white font-semibold text-sm shrink-0">
                    <%= admin.first_name&.first&.upcase || admin.email.first.upcase %>
                  </div>
                  <p class="font-medium text-white">
                    <%= "#{admin.first_name} #{admin.last_name}".strip.presence || "N/A" %>
                  </p>
                </div>
              </td>
              <td class="px-6 text-sm text-neutral-400">
                <%= admin.email %>
              </td>
              <td class="px-6 text-sm text-neutral-400">
                <%= admin.created_at.strftime("%d/%m/%Y") %>
              </td>
              <td class="px-6">
                <% if admin.id != current_user.id %>
                  <%= button_to admin_client_path(admin), method: :delete, data: { turbo_confirm: "Supprimer cet admin ?" }, class: "flex items-center justify-center gap-1.5 rounded-lg border border-red-400/30 bg-red-600 px-3 py-1.5 text-xs font-medium whitespace-nowrap text-white shadow-sm transition-all duration-100 ease-in-out select-none hover:bg-red-500" do %>
                    <i class="fa-solid fa-trash"></i>
                    Supprimer
                  <% end %>
                <% else %>
                  <span class="inline-flex items-center gap-1 rounded-full px-2 py-1 text-xs font-medium bg-blue-400/10 text-blue-400 ring-1 ring-inset ring-blue-400/25">
                    <i class="fa-solid fa-user text-xs"></i>
                    Vous
                  </span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div data-scroll-area-target="scrollbar"
         data-scroll-area-orientation-value="vertical"
         data-action="click->scroll-area#onScrollbarClick"
         class="absolute right-2 top-16 bottom-4 flex w-1.5 justify-center rounded-full bg-black/5 backdrop-blur-sm opacity-0 transition-opacity duration-150 delay-300 pointer-events-none data-[hovering]:opacity-100 data-[hovering]:duration-100 data-[hovering]:delay-0 data-[hovering]:pointer-events-auto data-[scrolling]:opacity-100 data-[scrolling]:duration-100 data-[scrolling]:delay-0 data-[scrolling]:pointer-events-auto data-[visible=false]:hidden dark:bg-white/10">
      <div data-scroll-area-target="thumb"
           data-action="mousedown->scroll-area#onThumbMouseDown"
           class="relative w-full rounded-full bg-neutral-500 transition-opacity duration-100 dark:bg-neutral-400"></div>
    </div>
  </div>

  <div class="relative w-full bg-neutral-950 rounded-xl border border-white/10 overflow-hidden"
       data-controller="scroll-area"
       data-scroll-area-target="root"
       data-action="mouseenter->scroll-area#onRootMouseEnter mouseleave->scroll-area#onRootMouseLeave">

    <div class="px-6 py-5 border-b border-white/10 flex items-center justify-between bg-neutral-900">
      <h2 class="text-lg font-semibold text-white flex items-center gap-2">
        <i class="fa-solid fa-envelope text-emerald-400"></i>
        Invitations
      </h2>
      <span class="text-sm text-neutral-400"><%= @invitations.count %> invitation(s)</span>
    </div>

    <% if @invitations.any? %>
      <div data-scroll-area-target="viewport"
           data-action="scroll->scroll-area#onViewportScroll"
           class="max-h-[400px] overflow-auto scrollbar-hide bg-neutral-950">
        <table class="w-full min-w-[800px]">
          <thead class="sticky top-0 z-10 bg-neutral-900">
            <tr class="*:py-3 *:text-left *:align-middle *:[box-shadow:inset_0_-1px_0_0_rgb(46_46_46)]">
              <th scope="col" class="px-6 text-sm font-semibold text-neutral-100">Code</th>
              <th scope="col" class="px-6 text-sm font-semibold text-neutral-100">Email</th>
              <th scope="col" class="px-6 text-sm font-semibold text-neutral-100 text-center">Étape</th>
              <th scope="col" class="px-6 text-sm font-semibold text-neutral-100 text-center">Statut</th>
              <th scope="col" class="px-6 text-sm font-semibold text-neutral-100">Créée</th>
              <th scope="col" class="px-6 text-sm font-semibold text-neutral-100">Expire</th>
              <th scope="col" class="px-6 text-sm font-semibold text-neutral-100 text-right">Actions</th>
            </tr>
          </thead>
          <tbody class="*:even:bg-neutral-900/50 *:*:py-4 bg-neutral-950">
            <% @invitations.each do |invitation| %>
              <tr class="hover:bg-neutral-800 transition-colors">
                <td class="px-6">
                  <code class="px-2 py-1 bg-neutral-800 text-emerald-400 rounded text-sm font-mono"><%= invitation.code %></code>
                </td>
                <td class="px-6 text-sm text-neutral-300">
                  <%= invitation.email.presence || "-" %>
                </td>
                <td class="px-6 text-center">
                  <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-blue-400/10 text-blue-400 text-sm font-bold">
                    <%= invitation.step %>/4
                  </span>
                </td>
                <td class="px-6 text-center">
                  <% if invitation.is_used? %>
                    <span class="inline-flex items-center gap-1 rounded-full px-2 py-1 text-xs font-medium bg-green-400/10 text-green-400 ring-1 ring-inset ring-green-400/25">
                      <i class="fa-solid fa-check text-[10px]"></i>
                      Utilisée
                    </span>
                  <% elsif invitation.is_expired? %>
                    <span class="inline-flex items-center gap-1 rounded-full px-2 py-1 text-xs font-medium bg-red-400/10 text-red-400 ring-1 ring-inset ring-red-400/25">
                      <i class="fa-solid fa-clock text-[10px]"></i>
                      Expirée
                    </span>
                  <% else %>
                    <span class="inline-flex items-center gap-1 rounded-full px-2 py-1 text-xs font-medium bg-emerald-400/10 text-emerald-400 ring-1 ring-inset ring-emerald-400/25">
                      <span class="w-1.5 h-1.5 rounded-full bg-emerald-400 animate-pulse"></span>
                      Active
                    </span>
                  <% end %>
                </td>
                <td class="px-6 text-sm text-neutral-400">
                  <%= invitation.created_at.strftime("%d/%m/%Y") %>
                </td>
                <td class="px-6 text-sm text-neutral-400">
                  <%= invitation.expires_at&.strftime("%d/%m/%Y") || "-" %>
                </td>
                <td class="px-6">
                  <div class="flex items-center justify-end gap-2">
                    <% if !invitation.is_used? && !invitation.is_expired? %>
                      <button onclick="copyToClipboard('https://join.trayo.fr/join/<%= invitation.code %>')" class="flex items-center justify-center w-8 h-8 rounded-lg border border-neutral-700 bg-neutral-800 text-neutral-300 hover:bg-neutral-700 hover:text-white transition-colors" title="Copier le lien">
                        <i class="fa-solid fa-copy text-xs"></i>
                      </button>
                      <%= link_to "https://join.trayo.fr/join/#{invitation.code}", target: "_blank", class: "flex items-center justify-center w-8 h-8 rounded-lg border border-emerald-400/30 bg-emerald-600 text-white hover:bg-emerald-500 transition-colors", title: "Ouvrir le lien" do %>
                        <i class="fa-solid fa-external-link text-xs"></i>
                      <% end %>
                    <% end %>
                    <%= button_to admin_invitation_path(invitation), method: :delete, data: { turbo_confirm: "Supprimer cette invitation ?" }, class: "flex items-center justify-center w-8 h-8 rounded-lg border border-red-400/30 bg-red-600 text-white hover:bg-red-500 transition-colors", title: "Supprimer" do %>
                      <i class="fa-solid fa-trash text-xs"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div data-scroll-area-target="scrollbar"
           data-scroll-area-orientation-value="vertical"
           data-action="click->scroll-area#onScrollbarClick"
           class="absolute right-2 top-16 bottom-4 flex w-1.5 justify-center rounded-full bg-black/5 backdrop-blur-sm opacity-0 transition-opacity duration-150 delay-300 pointer-events-none data-[hovering]:opacity-100 data-[hovering]:duration-100 data-[hovering]:delay-0 data-[hovering]:pointer-events-auto data-[scrolling]:opacity-100 data-[scrolling]:duration-100 data-[scrolling]:delay-0 data-[scrolling]:pointer-events-auto data-[visible=false]:hidden dark:bg-white/10">
        <div data-scroll-area-target="thumb"
             data-action="mousedown->scroll-area#onThumbMouseDown"
             class="relative w-full rounded-full bg-neutral-500 transition-opacity duration-100 dark:bg-neutral-400"></div>
      </div>
    <% else %>
      <div class="text-center py-12 px-6 bg-neutral-950">
        <div class="w-16 h-16 mx-auto mb-4 rounded-2xl bg-neutral-900 flex items-center justify-center">
          <i class="fa-solid fa-envelope text-2xl text-neutral-600"></i>
        </div>
        <p class="text-neutral-400 mb-4">Aucune invitation créée</p>
        <button type="button" onclick="document.querySelector('[data-action*=slideover][class*=emerald]').click()" class="inline-flex items-center justify-center gap-2 rounded-lg bg-emerald-600 px-4 py-2 text-sm font-medium text-white hover:bg-emerald-500 transition-colors">
          <i class="fa-solid fa-plus"></i>
          Créer une invitation
        </button>
      </div>
    <% end %>
  </div>
</div>
