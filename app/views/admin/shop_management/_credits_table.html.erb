<div class="px-6 py-4 border-b border-neutral-800 flex items-center justify-between">
  <div class="flex items-center gap-2">
    <i class="fa-solid fa-wallet text-emerald-400"></i>
    <span class="font-medium text-white">Packs de Crédits Commission</span>
  </div>
  <%= link_to new_credit_pack_admin_shop_management_index_path, class: "flex items-center gap-2 rounded-lg bg-emerald-600 px-4 py-2 text-sm font-medium text-white hover:bg-emerald-500 transition-all" do %>
    <i class="fa-solid fa-plus text-xs"></i>
    Nouveau Pack
  <% end %>
</div>

<% if @credit_packs.any? %>
  <div class="overflow-x-auto">
    <table class="w-full !bg-transparent !border-0">
      <thead class="!bg-transparent">
        <tr class="border-b border-neutral-800">
          <th class="px-6 py-3 text-left text-xs font-semibold text-neutral-500 uppercase tracking-wide">Pack</th>
          <th class="px-6 py-3 text-left text-xs font-semibold text-neutral-500 uppercase tracking-wide">Montant</th>
          <th class="px-6 py-3 text-left text-xs font-semibold text-neutral-500 uppercase tracking-wide">Bonus</th>
          <th class="px-6 py-3 text-left text-xs font-semibold text-neutral-500 uppercase tracking-wide">Total Crédits</th>
          <th class="px-6 py-3 text-left text-xs font-semibold text-neutral-500 uppercase tracking-wide">Statut</th>
          <th class="px-6 py-3 text-left text-xs font-semibold text-neutral-500 uppercase tracking-wide">Badge</th>
          <th class="px-6 py-3 text-right text-xs font-semibold text-neutral-500 uppercase tracking-wide">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-neutral-800/50">
        <% @credit_packs.each do |pack| %>
          <tr class="hover:bg-neutral-800/30 transition-colors">
            <td class="px-6 py-4">
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-emerald-500 to-teal-600 flex items-center justify-center text-white shadow-lg">
                  <i class="fa-solid fa-coins"></i>
                </div>
                <div>
                  <p class="font-semibold text-white"><%= pack.formatted_label %></p>
                  <p class="text-xs text-neutral-500">Position: <%= pack.position || '-' %></p>
                </div>
              </div>
            </td>
            <td class="px-6 py-4">
              <span class="text-xl font-bold text-white"><%= pack.amount %>€</span>
            </td>
            <td class="px-6 py-4">
              <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-sm font-semibold bg-emerald-500/20 text-emerald-400">
                +<%= pack.bonus_percentage %>%
              </span>
            </td>
            <td class="px-6 py-4">
              <div>
                <span class="text-lg font-bold text-emerald-400"><%= pack.total_credits %>€</span>
                <span class="text-xs text-neutral-500 ml-1">(+<%= pack.bonus_amount %>€)</span>
              </div>
            </td>
            <td class="px-6 py-4">
              <% if pack.active? %>
                <%= render 'admin/shared/status_badge', variant: 'success', label: 'Actif', pulse: true %>
              <% else %>
                <%= render 'admin/shared/status_badge', variant: 'neutral', label: 'Inactif' %>
              <% end %>
            </td>
            <td class="px-6 py-4">
              <% if pack.is_best? %>
                <span class="px-2 py-1 rounded-full text-xs font-bold bg-violet-500/20 text-violet-400">MEILLEUR</span>
              <% elsif pack.is_popular? %>
                <span class="px-2 py-1 rounded-full text-xs font-bold bg-amber-500/20 text-amber-400">POPULAIRE</span>
              <% else %>
                <span class="text-neutral-500">-</span>
              <% end %>
            </td>
            <td class="px-6 py-4">
              <div class="flex items-center justify-end gap-1">
                <%= link_to edit_credit_pack_admin_shop_management_path(pack), class: "w-8 h-8 rounded-lg bg-neutral-800 border border-neutral-700 flex items-center justify-center text-neutral-400 hover:text-amber-400 hover:border-amber-500/50 transition-all", title: "Modifier" do %>
                  <i class="fa-solid fa-pen text-xs"></i>
                <% end %>
                
                <%= button_to toggle_credit_pack_admin_shop_management_path(pack), method: :post, class: "w-8 h-8 rounded-lg border flex items-center justify-center transition-all cursor-pointer #{pack.active? ? 'bg-green-500/10 border-green-500/30 text-green-400 hover:bg-green-500/20' : 'bg-neutral-800 border-neutral-700 text-neutral-400 hover:text-green-400'}", title: pack.active? ? 'Désactiver' : 'Activer' do %>
                  <i class="fa-solid <%= pack.active? ? 'fa-eye' : 'fa-eye-slash' %> text-xs"></i>
                <% end %>
                
                <%= button_to destroy_credit_pack_admin_shop_management_path(pack), method: :delete, data: { turbo_confirm: "Supprimer ce pack ?" }, class: "w-8 h-8 rounded-lg bg-neutral-800 border border-neutral-700 flex items-center justify-center text-neutral-400 hover:text-red-400 hover:border-red-500/50 transition-all cursor-pointer", title: "Supprimer" do %>
                  <i class="fa-solid fa-trash text-xs"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="text-center py-16 px-6">
    <div class="w-16 h-16 mx-auto mb-4 rounded-2xl bg-emerald-500/20 flex items-center justify-center">
      <i class="fa-solid fa-wallet text-3xl text-emerald-400"></i>
    </div>
    <h3 class="text-lg font-semibold text-white mb-2">Aucun pack de crédits</h3>
    <p class="text-neutral-400 mb-6">Créez vos packs de crédits commission</p>
    <%= link_to new_credit_pack_admin_shop_management_index_path, class: "inline-flex items-center gap-2 rounded-lg bg-emerald-600 px-5 py-2.5 text-sm font-medium text-white hover:bg-emerald-500" do %>
      <i class="fa-solid fa-plus"></i>
      Créer un Pack
    <% end %>
  </div>
<% end %>

<div class="px-6 py-4 border-t border-neutral-800">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="p-4 rounded-xl bg-neutral-800/50 border border-neutral-700">
      <div class="flex items-center gap-3 mb-2">
        <div class="w-8 h-8 rounded-lg bg-emerald-500/20 flex items-center justify-center">
          <i class="fa-solid fa-percent text-emerald-400 text-sm"></i>
        </div>
        <span class="font-medium text-white">Bonus Progressif</span>
      </div>
      <p class="text-xs text-neutral-400">Plus le client recharge, plus le bonus est élevé</p>
    </div>
    
    <div class="p-4 rounded-xl bg-neutral-800/50 border border-neutral-700">
      <div class="flex items-center gap-3 mb-2">
        <div class="w-8 h-8 rounded-lg bg-blue-500/20 flex items-center justify-center">
          <i class="fa-solid fa-clock text-blue-400 text-sm"></i>
        </div>
        <span class="font-medium text-white">Prélèvement Auto</span>
      </div>
      <p class="text-xs text-neutral-400">Les commissions sont prélevées automatiquement</p>
    </div>
    
    <div class="p-4 rounded-xl bg-neutral-800/50 border border-neutral-700">
      <div class="flex items-center gap-3 mb-2">
        <div class="w-8 h-8 rounded-lg bg-amber-500/20 flex items-center justify-center">
          <i class="fa-solid fa-shield text-amber-400 text-sm"></i>
        </div>
        <span class="font-medium text-white">Bots Actifs</span>
      </div>
      <p class="text-xs text-neutral-400">Les bots restent actifs sans interruption</p>
    </div>
  </div>
</div>
