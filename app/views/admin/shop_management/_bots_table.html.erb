<div class="px-6 py-4 border-b border-neutral-800 flex items-center justify-between">
  <div class="flex items-center gap-2">
    <i class="fa-solid fa-robot text-blue-400"></i>
    <span class="font-medium text-white">Bots de Trading</span>
  </div>
  <%= link_to new_admin_bot_path, class: "flex items-center gap-2 rounded-lg bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-500 transition-all" do %>
    <i class="fa-solid fa-plus text-xs"></i>
    Nouveau Bot
  <% end %>
</div>

<% if @bots.any? %>
  <div class="overflow-x-auto">
    <table class="w-full !bg-transparent !border-0">
      <thead class="!bg-transparent">
        <tr class="border-b border-neutral-800">
          <th class="px-6 py-3 text-left text-xs font-semibold text-neutral-500 uppercase tracking-wide">Produit</th>
          <th class="px-6 py-3 text-left text-xs font-semibold text-neutral-500 uppercase tracking-wide">Prix</th>
          <th class="px-6 py-3 text-left text-xs font-semibold text-neutral-500 uppercase tracking-wide">Statut</th>
          <th class="px-6 py-3 text-left text-xs font-semibold text-neutral-500 uppercase tracking-wide">Ventes</th>
          <th class="px-6 py-3 text-left text-xs font-semibold text-neutral-500 uppercase tracking-wide">Revenus</th>
          <th class="px-6 py-3 text-left text-xs font-semibold text-neutral-500 uppercase tracking-wide">Performance</th>
          <th class="px-6 py-3 text-right text-xs font-semibold text-neutral-500 uppercase tracking-wide">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-neutral-800/50">
        <% @bots.each do |bot| %>
          <% 
            sales_count = bot.bot_purchases.count
            revenue = bot.bot_purchases.sum(:price_paid)
            win_rate = bot.calculate_global_win_rate
          %>
          <tr class="hover:bg-neutral-800/30 transition-colors">
            <td class="px-6 py-4">
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white shadow-lg">
                  <i class="fa-solid fa-robot"></i>
                </div>
                <div>
                  <p class="font-semibold text-white"><%= bot.name %></p>
                  <p class="text-xs text-neutral-500"><%= bot.symbol || 'Multi' %> • Magic: <%= bot.magic_number_prefix || '-' %></p>
                </div>
              </div>
            </td>
            <td class="px-6 py-4">
              <div class="flex items-center gap-2">
                <span class="text-xl font-bold text-white"><%= bot.price.to_i %>€</span>
                <%= link_to edit_admin_bot_path(bot), class: "w-7 h-7 rounded-lg bg-neutral-800 border border-neutral-700 flex items-center justify-center text-neutral-400 hover:text-white hover:border-neutral-600 transition-all", title: "Modifier" do %>
                  <i class="fa-solid fa-pen text-[10px]"></i>
                <% end %>
              </div>
            </td>
            <td class="px-6 py-4">
              <% if bot.is_active? %>
                <%= render 'admin/shared/status_badge', variant: 'success', label: 'En vente', pulse: true %>
              <% else %>
                <%= render 'admin/shared/status_badge', variant: 'neutral', label: 'Masqué' %>
              <% end %>
            </td>
            <td class="px-6 py-4">
              <span class="text-lg font-semibold text-white"><%= sales_count %></span>
              <span class="text-xs text-neutral-500 ml-1">vente(s)</span>
            </td>
            <td class="px-6 py-4">
              <span class="text-lg font-semibold text-emerald-400"><%= number_to_currency(revenue, unit: "€", format: "%n%u") %></span>
            </td>
            <td class="px-6 py-4">
              <div class="space-y-1">
                <div class="flex items-center justify-between text-xs">
                  <span class="text-neutral-400">Win Rate</span>
                  <span class="text-white font-medium"><%= number_to_percentage(win_rate, precision: 0) %></span>
                </div>
                <div class="h-1.5 bg-neutral-800 rounded-full overflow-hidden w-24">
                  <div class="h-full bg-gradient-to-r from-emerald-500 to-green-400 rounded-full" style="width: <%= win_rate %>%"></div>
                </div>
              </div>
            </td>
            <td class="px-6 py-4">
              <div class="flex items-center justify-end gap-1">
                <%= link_to admin_bot_path(bot), class: "w-8 h-8 rounded-lg bg-neutral-800 border border-neutral-700 flex items-center justify-center text-neutral-400 hover:text-white hover:border-neutral-600 transition-all", title: "Voir" do %>
                  <i class="fa-solid fa-eye text-xs"></i>
                <% end %>
                
                <%= link_to edit_admin_bot_path(bot), class: "w-8 h-8 rounded-lg bg-neutral-800 border border-neutral-700 flex items-center justify-center text-neutral-400 hover:text-amber-400 hover:border-amber-500/50 transition-all", title: "Modifier" do %>
                  <i class="fa-solid fa-pen text-xs"></i>
                <% end %>
                
                <%= button_to toggle_bot_admin_shop_management_path(bot), method: :post, class: "w-8 h-8 rounded-lg border flex items-center justify-center transition-all cursor-pointer #{bot.is_active? ? 'bg-green-500/10 border-green-500/30 text-green-400 hover:bg-green-500/20' : 'bg-neutral-800 border-neutral-700 text-neutral-400 hover:text-green-400'}", title: bot.is_active? ? 'Masquer' : 'Activer' do %>
                  <i class="fa-solid <%= bot.is_active? ? 'fa-eye' : 'fa-eye-slash' %> text-xs"></i>
                <% end %>
                
                <%= button_to duplicate_bot_admin_shop_management_path(bot), method: :post, class: "w-8 h-8 rounded-lg bg-neutral-800 border border-neutral-700 flex items-center justify-center text-neutral-400 hover:text-blue-400 hover:border-blue-500/50 transition-all cursor-pointer", title: "Dupliquer" do %>
                  <i class="fa-solid fa-copy text-xs"></i>
                <% end %>
                
                <%= button_to admin_bot_path(bot), method: :delete, data: { turbo_confirm: "Supprimer #{bot.name} ?" }, class: "w-8 h-8 rounded-lg bg-neutral-800 border border-neutral-700 flex items-center justify-center text-neutral-400 hover:text-red-400 hover:border-red-500/50 transition-all cursor-pointer", title: "Supprimer" do %>
                  <i class="fa-solid fa-trash text-xs"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="text-center py-16 px-6">
    <div class="w-16 h-16 mx-auto mb-4 rounded-2xl bg-blue-500/20 flex items-center justify-center">
      <i class="fa-solid fa-robot text-3xl text-blue-400"></i>
    </div>
    <h3 class="text-lg font-semibold text-white mb-2">Aucun bot</h3>
    <p class="text-neutral-400 mb-6">Créez votre premier bot de trading</p>
    <%= link_to new_admin_bot_path, class: "inline-flex items-center gap-2 rounded-lg bg-blue-600 px-5 py-2.5 text-sm font-medium text-white hover:bg-blue-500" do %>
      <i class="fa-solid fa-plus"></i>
      Créer un Bot
    <% end %>
  </div>
<% end %>

