<% @page_title = "Modifier #{@product.name}" %>

<div class="space-y-6">
  <div class="flex items-center gap-4">
    <%= link_to admin_shop_management_index_path(tab: 'products'), class: "w-10 h-10 rounded-xl bg-neutral-800 border border-neutral-700 flex items-center justify-center text-neutral-400 hover:text-white hover:border-neutral-600 transition-all" do %>
      <i class="fa-solid fa-arrow-left"></i>
    <% end %>
    <div>
      <h1 class="text-2xl font-bold text-white">Modifier <%= @product.name %></h1>
      <p class="text-neutral-400">Modifiez les informations du pack</p>
    </div>
  </div>

  <%= render 'product_form', product: @product %>
</div>

