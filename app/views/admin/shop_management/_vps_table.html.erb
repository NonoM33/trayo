<div class="px-6 py-4 border-b border-neutral-800 flex items-center justify-between">
  <div class="flex items-center gap-2">
    <i class="fa-solid fa-server text-amber-400"></i>
    <span class="font-medium text-white">Offres VPS</span>
  </div>
  <div class="flex items-center gap-3">
    <%= link_to admin_vps_path, class: "flex items-center gap-2 rounded-lg border border-neutral-700 bg-neutral-800 px-4 py-2 text-sm font-medium text-neutral-300 hover:bg-neutral-700 hover:text-white transition-all" do %>
      <i class="fa-solid fa-users text-xs"></i>
      VPS Clients
    <% end %>
    <%= link_to new_vps_offer_admin_shop_management_index_path, class: "flex items-center gap-2 rounded-lg bg-amber-600 px-4 py-2 text-sm font-medium text-white hover:bg-amber-500 transition-all" do %>
      <i class="fa-solid fa-plus text-xs"></i>
      Nouvelle Offre
    <% end %>
  </div>
</div>

<% if @vps_offers.any? %>
  <div class="overflow-x-auto">
    <table class="w-full !bg-transparent !border-0">
      <thead class="!bg-transparent">
        <tr class="border-b border-neutral-800">
          <th class="px-6 py-3 text-left text-xs font-semibold text-neutral-500 uppercase tracking-wide">Offre</th>
          <th class="px-6 py-3 text-left text-xs font-semibold text-neutral-500 uppercase tracking-wide">Prix</th>
          <th class="px-6 py-3 text-left text-xs font-semibold text-neutral-500 uppercase tracking-wide">Specs</th>
          <th class="px-6 py-3 text-left text-xs font-semibold text-neutral-500 uppercase tracking-wide">Statut</th>
          <th class="px-6 py-3 text-left text-xs font-semibold text-neutral-500 uppercase tracking-wide">Badge</th>
          <th class="px-6 py-3 text-right text-xs font-semibold text-neutral-500 uppercase tracking-wide">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-neutral-800/50">
        <% @vps_offers.each do |offer| %>
          <tr class="hover:bg-neutral-800/30 transition-colors">
            <td class="px-6 py-4">
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-amber-500 to-orange-600 flex items-center justify-center text-white shadow-lg">
                  <i class="fa-solid fa-server"></i>
                </div>
                <div>
                  <p class="font-semibold text-white"><%= offer.name %></p>
                  <p class="text-xs text-neutral-500 max-w-xs truncate"><%= offer.description %></p>
                </div>
              </div>
            </td>
            <td class="px-6 py-4">
              <div>
                <span class="text-xl font-bold text-white"><%= number_to_currency(offer.price, unit: "€", format: "%n%u") %></span>
                <span class="text-xs text-neutral-500">/an</span>
              </div>
            </td>
            <td class="px-6 py-4">
              <div class="flex flex-wrap gap-1">
                <% offer.specs_list.each do |spec| %>
                  <span class="px-2 py-0.5 rounded text-xs bg-neutral-800 text-neutral-300"><%= spec %></span>
                <% end %>
              </div>
            </td>
            <td class="px-6 py-4">
              <% if offer.active? %>
                <%= render 'admin/shared/status_badge', variant: 'success', label: 'Actif', pulse: true %>
              <% else %>
                <%= render 'admin/shared/status_badge', variant: 'neutral', label: 'Inactif' %>
              <% end %>
            </td>
            <td class="px-6 py-4">
              <% if offer.is_recommended? %>
                <span class="px-2 py-1 rounded-full text-xs font-bold bg-amber-500/20 text-amber-400">RECOMMANDÉ</span>
              <% else %>
                <span class="text-neutral-500">-</span>
              <% end %>
            </td>
            <td class="px-6 py-4">
              <div class="flex items-center justify-end gap-1">
                <%= link_to edit_vps_offer_admin_shop_management_path(offer), class: "w-8 h-8 rounded-lg bg-neutral-800 border border-neutral-700 flex items-center justify-center text-neutral-400 hover:text-amber-400 hover:border-amber-500/50 transition-all", title: "Modifier" do %>
                  <i class="fa-solid fa-pen text-xs"></i>
                <% end %>
                
                <%= button_to toggle_vps_offer_admin_shop_management_path(offer), method: :post, class: "w-8 h-8 rounded-lg border flex items-center justify-center transition-all cursor-pointer #{offer.active? ? 'bg-green-500/10 border-green-500/30 text-green-400 hover:bg-green-500/20' : 'bg-neutral-800 border-neutral-700 text-neutral-400 hover:text-green-400'}", title: offer.active? ? 'Désactiver' : 'Activer' do %>
                  <i class="fa-solid <%= offer.active? ? 'fa-eye' : 'fa-eye-slash' %> text-xs"></i>
                <% end %>
                
                <%= button_to destroy_vps_offer_admin_shop_management_path(offer), method: :delete, data: { turbo_confirm: "Supprimer #{offer.name} ?" }, class: "w-8 h-8 rounded-lg bg-neutral-800 border border-neutral-700 flex items-center justify-center text-neutral-400 hover:text-red-400 hover:border-red-500/50 transition-all cursor-pointer", title: "Supprimer" do %>
                  <i class="fa-solid fa-trash text-xs"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="text-center py-16 px-6">
    <div class="w-16 h-16 mx-auto mb-4 rounded-2xl bg-amber-500/20 flex items-center justify-center">
      <i class="fa-solid fa-server text-3xl text-amber-400"></i>
    </div>
    <h3 class="text-lg font-semibold text-white mb-2">Aucune offre VPS</h3>
    <p class="text-neutral-400 mb-6">Créez vos offres VPS pour les clients</p>
    <%= link_to new_vps_offer_admin_shop_management_index_path, class: "inline-flex items-center gap-2 rounded-lg bg-amber-600 px-5 py-2.5 text-sm font-medium text-white hover:bg-amber-500" do %>
      <i class="fa-solid fa-plus"></i>
      Créer une Offre
    <% end %>
  </div>
<% end %>

<% 
  total_vps = Vps.count
  active_vps = Vps.active.count
  vps_revenue = Vps.sum(:monthly_price) rescue 0
%>

<div class="px-6 py-4 border-t border-neutral-800">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="p-4 rounded-xl bg-neutral-800/50 border border-neutral-700">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-neutral-400">VPS Commandés</p>
          <p class="text-2xl font-bold text-white"><%= total_vps %></p>
        </div>
        <div class="w-10 h-10 rounded-lg bg-blue-500/20 flex items-center justify-center">
          <i class="fa-solid fa-server text-blue-400"></i>
        </div>
      </div>
    </div>
    
    <div class="p-4 rounded-xl bg-neutral-800/50 border border-neutral-700">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-neutral-400">VPS Actifs</p>
          <p class="text-2xl font-bold text-green-400"><%= active_vps %></p>
        </div>
        <div class="w-10 h-10 rounded-lg bg-green-500/20 flex items-center justify-center">
          <i class="fa-solid fa-circle-check text-green-400"></i>
        </div>
      </div>
    </div>
    
    <div class="p-4 rounded-xl bg-neutral-800/50 border border-neutral-700">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-neutral-400">Revenus VPS</p>
          <p class="text-2xl font-bold text-emerald-400"><%= number_to_currency(vps_revenue, unit: "€", format: "%n%u") %></p>
        </div>
        <div class="w-10 h-10 rounded-lg bg-emerald-500/20 flex items-center justify-center">
          <i class="fa-solid fa-euro-sign text-emerald-400"></i>
        </div>
      </div>
    </div>
  </div>
</div>
