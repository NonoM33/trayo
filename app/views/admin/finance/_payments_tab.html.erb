<% if @payments&.any? %>
  <div class="overflow-auto max-h-[500px] scrollbar-hide">
    <table class="w-full min-w-[800px] !bg-transparent !border-0">
      <thead class="sticky top-0 z-10 !bg-neutral-950">
        <tr class="*:py-3 *:text-left *:align-middle border-b border-neutral-800">
          <th class="px-6 text-sm font-semibold text-neutral-100">Date</th>
          <th class="px-6 text-sm font-semibold text-neutral-100">Client</th>
          <th class="px-6 text-sm font-semibold text-neutral-100 text-right">Montant</th>
          <th class="px-6 text-sm font-semibold text-neutral-100">Méthode</th>
          <th class="px-6 text-sm font-semibold text-neutral-100 text-center">Statut</th>
          <th class="px-6 text-sm font-semibold text-neutral-100 text-right">Actions</th>
        </tr>
      </thead>
      <tbody class="*:even:bg-neutral-800/30 bg-neutral-900">
        <% @payments.each do |payment| %>
          <tr class="hover:bg-neutral-800 transition-colors">
            <td class="px-6 py-3 text-sm text-neutral-300"><%= payment.payment_date&.strftime("%d/%m/%Y") || "—" %></td>
            <td class="px-6 py-3">
              <% if payment.user.present? %>
                <%= link_to admin_client_path(payment.user), class: "text-blue-400 hover:text-blue-300 text-sm" do %>
                  <%= payment.user.email %>
                <% end %>
              <% else %>
                <span class="text-neutral-500">—</span>
              <% end %>
            </td>
            <td class="px-6 py-3 text-right">
              <span class="font-bold text-green-400"><%= number_to_currency(payment.amount, unit: "€", format: "%n%u") %></span>
            </td>
            <td class="px-6 py-3 text-sm text-neutral-400"><%= payment.payment_method_label rescue "—" %></td>
            <td class="px-6 py-3 text-center">
              <% variant = payment.status == 'validated' ? 'success' : payment.status == 'pending' ? 'warning' : 'danger' %>
              <span class="inline-flex items-center gap-1.5 rounded-full px-2.5 py-1 text-xs font-medium <%= variant == 'success' ? 'bg-green-400/10 text-green-400' : variant == 'warning' ? 'bg-amber-400/10 text-amber-400' : 'bg-red-400/10 text-red-400' %>">
                <% if payment.status == 'pending' %><span class="w-1.5 h-1.5 rounded-full bg-amber-400 animate-pulse"></span><% end %>
                <%= payment.status&.upcase || 'N/A' %>
              </span>
            </td>
            <td class="px-6 py-3">
              <div class="flex items-center justify-end gap-2">
                <% if payment.status == "pending" %>
                  <%= button_to admin_payment_path(payment), method: :patch, params: { action_type: "validate" }, class: "flex items-center justify-center w-7 h-7 rounded-lg bg-green-600 text-white hover:bg-green-500 transition-colors", title: "Valider" do %>
                    <i class="fa-solid fa-check text-xs"></i>
                  <% end %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="text-center py-12">
    <i class="fa-solid fa-credit-card text-4xl text-neutral-600 mb-4"></i>
    <p class="text-neutral-400">Aucun paiement</p>
  </div>
<% end %>

