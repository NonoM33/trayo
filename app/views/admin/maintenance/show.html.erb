<% @page_title = "Maintenance" %>

<div class="space-y-6">
  <%= render 'admin/shared/flash_messages' %>

  <div class="bg-neutral-900 rounded-xl p-6">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-6">
      <div class="flex items-center gap-4">
        <div class="w-14 h-14 rounded-2xl <%= @maintenance.is_enabled? ? 'bg-green-500/20' : 'bg-neutral-700' %> flex items-center justify-center">
          <i class="fa-solid fa-wrench text-2xl <%= @maintenance.is_enabled? ? 'text-green-400' : 'text-neutral-400' %>"></i>
        </div>
        <div>
          <h2 class="text-xl font-bold text-white">Mode Maintenance</h2>
          <div class="flex items-center gap-2 mt-1">
            <% if @maintenance.is_enabled? %>
              <span class="w-2.5 h-2.5 rounded-full bg-green-400 animate-pulse"></span>
              <span class="text-green-400 font-medium">Activé</span>
            <% else %>
              <span class="w-2.5 h-2.5 rounded-full bg-neutral-500"></span>
              <span class="text-neutral-400">Désactivé</span>
            <% end %>
          </div>
        </div>
      </div>
      
      <div class="flex gap-3">
        <%= form_with url: admin_maintenance_toggle_path, method: :patch, local: true do |form| %>
          <%= form.submit @maintenance.is_enabled? ? 'Désactiver' : 'Activer', 
              class: "flex items-center justify-center gap-2 rounded-lg px-5 py-2.5 text-sm font-medium transition-colors cursor-pointer #{@maintenance.is_enabled? ? 'border border-red-400/30 bg-red-600 text-white hover:bg-red-500' : 'border border-green-400/30 bg-green-600 text-white hover:bg-green-500'}",
              data: { turbo_confirm: @maintenance.is_enabled? ? 'Désactiver le mode maintenance ?' : 'Activer le mode maintenance ?' } %>
        <% end %>
        <%= link_to admin_dashboard_path, class: "flex items-center justify-center gap-2 rounded-lg border border-neutral-700 bg-neutral-800 px-5 py-2.5 text-sm font-medium text-neutral-300 transition-colors hover:bg-neutral-700" do %>
          <i class="fa-solid fa-arrow-left"></i>
          Retour
        <% end %>
      </div>
    </div>

    <%= form_with model: @maintenance, url: admin_maintenance_path, method: :patch, local: true, class: "space-y-6" do |form| %>
      <% if @maintenance.errors.any? %>
        <div class="flex items-start gap-3 p-4 rounded-xl bg-red-500/10">
          <i class="fa-solid fa-exclamation-circle text-red-400 mt-0.5"></i>
          <div>
            <p class="text-red-300 font-medium"><%= pluralize(@maintenance.errors.count, "erreur") %> :</p>
            <ul class="mt-1 text-sm text-red-300/80 list-disc list-inside">
              <% @maintenance.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-neutral-300 mb-2">Titre Principal *</label>
          <%= form.text_field :title, placeholder: "Ex: Maintenance Programmée", required: true, class: "w-full px-4 py-3 bg-neutral-800 border border-neutral-700 rounded-lg text-white placeholder-neutral-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-neutral-300 mb-2">URL du Logo</label>
          <%= form.url_field :logo_url, placeholder: "https://exemple.com/logo.png", class: "w-full px-4 py-3 bg-neutral-800 border border-neutral-700 rounded-lg text-white placeholder-neutral-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
        </div>
      </div>
      
      <div>
        <label class="block text-sm font-medium text-neutral-300 mb-2">Sous-titre *</label>
        <%= form.text_field :subtitle, placeholder: "Ex: Nous travaillons pour améliorer votre expérience", required: true, class: "w-full px-4 py-3 bg-neutral-800 border border-neutral-700 rounded-lg text-white placeholder-neutral-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
      </div>
      
      <div>
        <label class="block text-sm font-medium text-neutral-300 mb-2">Description *</label>
        <%= form.text_area :description, placeholder: "Message détaillé expliquant la maintenance...", rows: 4, required: true, class: "w-full px-4 py-3 bg-neutral-800 border border-neutral-700 rounded-lg text-white placeholder-neutral-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all resize-none" %>
      </div>
      
      <div>
        <label class="block text-sm font-medium text-neutral-300 mb-2">Date de Fin</label>
        <%= form.datetime_local_field :countdown_date, class: "w-full px-4 py-3 bg-neutral-800 border border-neutral-700 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
        <p class="mt-1 text-xs text-neutral-500">Affichera un compte à rebours sur la page de maintenance</p>
      </div>
      
      <div class="flex items-center justify-end gap-3 pt-4 border-t border-neutral-800">
        <%= link_to admin_dashboard_path, class: "flex items-center justify-center gap-2 rounded-lg border border-neutral-700 bg-neutral-800 px-5 py-2.5 text-sm font-medium text-neutral-300 transition-colors hover:bg-neutral-700" do %>
          Annuler
        <% end %>
        <%= form.submit "Sauvegarder", class: "flex items-center justify-center gap-2 rounded-lg bg-blue-600 px-5 py-2.5 text-sm font-medium text-white shadow-lg shadow-blue-600/25 transition-all hover:bg-blue-500 cursor-pointer" %>
      </div>
    <% end %>
  </div>

  <div class="bg-neutral-900 rounded-xl overflow-hidden">
    <div class="px-6 py-5 bg-neutral-800">
      <h3 class="text-lg font-semibold text-white flex items-center gap-2">
        <i class="fa-solid fa-eye text-purple-400"></i>
        Aperçu
      </h3>
    </div>
    
    <div class="p-6">
      <div class="bg-gradient-to-br from-purple-600 to-pink-600 rounded-2xl p-8 text-center text-white">
        <% if @maintenance.logo_url.present? %>
          <div class="mb-6">
            <img src="<%= @maintenance.logo_url %>" alt="Logo" class="max-w-[150px] max-h-20 mx-auto rounded-lg">
          </div>
        <% end %>
        
        <h2 class="text-3xl font-bold mb-3"><%= @maintenance.title || "Maintenance" %></h2>
        
        <% if @maintenance.subtitle.present? %>
          <p class="text-xl opacity-90 mb-4"><%= @maintenance.subtitle %></p>
        <% end %>
        
        <% if @maintenance.description.present? %>
          <p class="opacity-80 max-w-xl mx-auto"><%= simple_format(@maintenance.description) %></p>
        <% end %>
        
        <% if @maintenance.countdown_date.present? %>
          <div class="bg-white/10 backdrop-blur rounded-xl p-5 mt-6 inline-block">
            <p class="text-sm mb-3 opacity-80">Retour prévu dans :</p>
            <div class="grid grid-cols-4 gap-4">
              <% ['Jours', 'Heures', 'Minutes', 'Secondes'].each do |label| %>
                <div class="text-center">
                  <div class="text-2xl font-bold">--</div>
                  <div class="text-xs opacity-70"><%= label %></div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      
      <div class="flex items-center gap-3 mt-6 p-4 rounded-xl bg-blue-500/10">
        <i class="fa-solid fa-info-circle text-blue-400"></i>
        <p class="text-sm text-blue-300">Les administrateurs peuvent toujours accéder au site via <code class="px-1.5 py-0.5 bg-blue-500/20 rounded">/admin</code> en mode maintenance.</p>
      </div>
    </div>
  </div>
</div>
