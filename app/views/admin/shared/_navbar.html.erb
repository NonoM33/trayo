<div class="fixed top-0 right-0 h-16 bg-neutral-900/95 backdrop-blur-xl border-b border-neutral-800 z-[9998] flex items-center justify-between transition-all duration-300 left-0" style="padding: 0 16px;" id="navbar" data-controller="navbar">
  <div class="flex items-center gap-3">
    <div class="md:hidden w-10 h-10 rounded-xl bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white font-bold text-lg">
      T
    </div>
    <h2 class="text-base md:text-xl font-bold text-white flex items-center gap-2 truncate">
      <% if @page_title&.include?('VPS') %>
        <i class="fa-solid fa-server hidden md:inline"></i>
      <% elsif @page_title&.include?('Bot') %>
        <i class="fa-solid fa-robot hidden md:inline"></i>
      <% elsif @page_title&.include?('Client') %>
        <i class="fa-solid fa-users hidden md:inline"></i>
      <% elsif @page_title&.include?('Bonus') %>
        <i class="fa-solid fa-gift hidden md:inline"></i>
      <% else %>
        <i class="fa-solid fa-chart-line hidden md:inline"></i>
      <% end %>
      <span class="truncate max-w-[180px] md:max-w-none"><%= @page_title || 'Dashboard' %></span>
    </h2>
  </div>
  <div class="flex items-center gap-2">
    <% total_credits = current_user.total_credits %>
    <%= link_to admin_shop_index_path(anchor: 'credits'), class: "group flex items-center gap-1.5 md:gap-2.5 px-2.5 md:px-4 py-1.5 md:py-2 rounded-xl transition-all #{total_credits > 0 ? 'bg-gradient-to-r from-emerald-500 to-teal-500 shadow-lg shadow-emerald-500/20' : 'bg-gradient-to-r from-violet-500 to-purple-600 shadow-lg shadow-violet-500/20'} hover:scale-105 active:scale-95" do %>
      <i class="fa-solid fa-wallet text-white text-sm"></i>
      <span class="text-white font-bold text-xs md:text-sm whitespace-nowrap">
        <%= number_to_currency(total_credits, unit: "€", format: "%n%u", precision: 0) %>
        <span class="hidden md:inline"> crédits</span>
      </span>
      <% if total_credits < 100 %>
        <span class="hidden md:inline px-1.5 py-0.5 rounded text-[9px] font-bold uppercase bg-white/20 text-white">
          +10%
        </span>
      <% end %>
    <% end %>
  </div>
</div>
