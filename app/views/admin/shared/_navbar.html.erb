<div style="position: fixed !important; top: 0 !important; left: 256px !important; right: 0 !important; height: 64px !important; background-color: #111827 !important; border-bottom: 1px solid #374151 !important; padding: 0 24px !important; z-index: 9998 !important; color: #ffffff !important; display: flex !important; align-items: center !important; justify-content: space-between !important; transition: left 0.3s !important;" id="navbar">
  <div class="flex items-center gap-4">
    <button data-action="click->sidebar#openMobile" class="md:hidden p-2 rounded-lg hover:bg-neutral-100 dark:hover:bg-neutral-800 text-neutral-600 dark:text-neutral-400" aria-label="Toggle menu" id="mobileMenuBtn">
      <i class="fa-solid fa-bars"></i>
    </button>
    <h2 class="text-xl font-bold text-neutral-900 dark:text-white flex items-center gap-2">
      <% if @page_title&.include?('VPS') %>
        <i class="fa-solid fa-server"></i>
      <% elsif @page_title&.include?('Bot') %>
        <i class="fa-solid fa-robot"></i>
      <% elsif @page_title&.include?('Client') %>
        <i class="fa-solid fa-users"></i>
      <% elsif @page_title&.include?('Bonus') %>
        <i class="fa-solid fa-gift"></i>
      <% else %>
        <i class="fa-solid fa-chart-line"></i>
      <% end %>
      <%= @page_title || 'Dashboard' %>
    </h2>
  </div>
  <div class="flex items-center gap-4">
    <% total_credits = current_user.total_credits %>
    <div class="flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-green-500 to-green-600 rounded-lg shadow-sm">
      <i class="fa-solid fa-gift text-white"></i>
      <span class="text-white font-bold text-sm">
        <%= number_to_currency(total_credits, unit: "€", format: "%n %u", precision: 2) %> crédits
      </span>
    </div>
  </div>
</div>
