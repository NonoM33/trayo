<div>
  <label class="block text-sm font-medium text-neutral-400 mb-1.5"><%= local_assigns[:label] %></label>
  
  <% input_class = "w-full px-3 py-2.5 bg-neutral-800 border border-neutral-700 rounded-lg text-white text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" %>
  
  <% case local_assigns[:type] %>
  <% when 'select' %>
    <select name="<%= local_assigns[:name] %>" class="<%= input_class %>">
      <% (local_assigns[:options] || []).each do |opt| %>
        <% label, value = opt.is_a?(Array) ? opt : [opt, opt] %>
        <option value="<%= value %>" <%= 'selected' if local_assigns[:selected].to_s == value.to_s %>><%= label %></option>
      <% end %>
    </select>
  <% when 'date' %>
    <input type="date" name="<%= local_assigns[:name] %>" value="<%= local_assigns[:value] %>" class="<%= input_class %>">
  <% else %>
    <input type="<%= local_assigns[:type] || 'text' %>" 
           name="<%= local_assigns[:name] %>" 
           value="<%= local_assigns[:value] %>"
           placeholder="<%= local_assigns[:placeholder] %>"
           class="<%= input_class %>">
  <% end %>
</div>
