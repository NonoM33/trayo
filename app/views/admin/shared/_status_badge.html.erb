<% variants = {
  'success' => 'bg-green-400/10 text-green-400 ring-1 ring-inset ring-green-400/25',
  'warning' => 'bg-amber-400/10 text-amber-400 ring-1 ring-inset ring-amber-400/25',
  'danger' => 'bg-red-400/10 text-red-400 ring-1 ring-inset ring-red-400/25',
  'info' => 'bg-blue-400/10 text-blue-400 ring-1 ring-inset ring-blue-400/25',
  'neutral' => 'bg-neutral-400/10 text-neutral-400 ring-1 ring-inset ring-neutral-400/25',
  'emerald' => 'bg-emerald-400/10 text-emerald-400 ring-1 ring-inset ring-emerald-400/25',
  'cyan' => 'bg-cyan-400/10 text-cyan-400 ring-1 ring-inset ring-cyan-400/25',
  'purple' => 'bg-purple-400/10 text-purple-400 ring-1 ring-inset ring-purple-400/25'
} %>

<% pulse_colors = {
  'success' => 'bg-green-400',
  'warning' => 'bg-amber-400',
  'danger' => 'bg-red-400',
  'info' => 'bg-blue-400',
  'neutral' => 'bg-neutral-400',
  'emerald' => 'bg-emerald-400',
  'cyan' => 'bg-cyan-400',
  'purple' => 'bg-purple-400'
} %>

<span class="inline-flex items-center gap-1.5 rounded-full px-2.5 py-1 text-xs font-medium <%= variants[local_assigns[:variant] || 'neutral'] %>">
  <% if local_assigns[:pulse] %>
    <span class="w-1.5 h-1.5 rounded-full <%= pulse_colors[local_assigns[:variant] || 'neutral'] %> animate-pulse"></span>
  <% end %>
  <% if local_assigns[:icon] %>
    <i class="fa-solid <%= local_assigns[:icon] %> text-[10px]"></i>
  <% end %>
  <%= local_assigns[:label] || 'Status' %>
</span>
