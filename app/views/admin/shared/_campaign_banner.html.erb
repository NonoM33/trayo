<% if @current_campaign&.active_and_current? %>
<div class="apple-campaign-banner">
  <div class="campaign-container">
    <div class="campaign-content">
      <div class="campaign-header">
        <h2 class="campaign-title"><%= @current_campaign.title %></h2>
        <p class="campaign-description"><%= @current_campaign.description %></p>
        <% if @current_campaign.has_button? %>
          <a href="<%= @current_campaign.button_url %>" target="_blank" class="campaign-cta">
            <%= @current_campaign.button_text %>
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M6 3l5 5-5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        <% end %>
      </div>
      
      <div class="campaign-metrics">
        <div class="metric-group">
          <div class="metric-value"><%= @current_campaign.days_remaining %></div>
          <div class="metric-label">jours restants</div>
        </div>
        
        <div class="progress-group">
          <div class="progress-bar">
            <div class="progress-fill" style="width: <%= @current_campaign.progress_percentage %>%"></div>
          </div>
          <span class="progress-text"><%= @current_campaign.progress_percentage %>% terminé</span>
        </div>
      </div>
      
      <button class="close-button" onclick="dismissCampaignBanner()" aria-label="Fermer">
        <svg width="12" height="12" viewBox="0 0 12 12" fill="none">
          <path d="M1 1L11 11M11 1L1 11" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
      </button>
    </div>
    
    <div class="gradient-overlay"></div>
    <div class="particle particle-1"></div>
    <div class="particle particle-2"></div>
    <div class="particle particle-3"></div>
  </div>
</div>

<style>
.apple-campaign-banner {
  margin-bottom: 32px;
  position: relative;
}

.campaign-container {
  position: relative;
  background: <%= @current_campaign.banner_color %>;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08), 0 2px 8px rgba(0, 0, 0, 0.04);
  animation: slideInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
}

.campaign-content {
  position: relative;
  z-index: 2;
  padding: 40px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 32px;
  color: white;
}

.campaign-header {
  flex: 1;
  max-width: 600px;
}

.campaign-title {
  font-size: 32px;
  font-weight: 700;
  letter-spacing: -0.02em;
  margin: 0 0 12px 0;
  line-height: 1.2;
}

.campaign-description {
  font-size: 17px;
  line-height: 1.5;
  margin: 0 0 24px 0;
  opacity: 0.95;
  font-weight: 500;
}

.campaign-cta {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.3);
  color: white;
  padding: 14px 28px;
  border-radius: 12px;
  text-decoration: none;
  font-weight: 600;
  font-size: 16px;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
}

.campaign-cta:hover {
  background: rgba(255, 255, 255, 0.4);
  border-color: rgba(255, 255, 255, 0.5);
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
}

.campaign-cta svg {
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.campaign-cta:hover svg {
  transform: translateX(4px);
}

.campaign-metrics {
  display: flex;
  flex-direction: column;
  gap: 20px;
  min-width: 160px;
}

.metric-group {
  text-align: center;
}

.metric-value {
  font-size: 48px;
  font-weight: 800;
  line-height: 1;
  letter-spacing: -0.03em;
  margin-bottom: 8px;
}

.metric-label {
  font-size: 13px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  opacity: 0.9;
}

.progress-group {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.progress-bar {
  height: 6px;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 3px;
  overflow: hidden;
  position: relative;
}

.progress-fill {
  height: 100%;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 3px;
  transition: width 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 0 12px rgba(255, 255, 255, 0.4);
}

.progress-text {
  font-size: 12px;
  font-weight: 600;
  text-align: center;
  opacity: 0.85;
}

.close-button {
  position: absolute;
  top: 20px;
  right: 20px;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 10px;
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s;
  color: white;
  z-index: 10;
}

.close-button:hover {
  background: rgba(255, 255, 255, 0.25);
  transform: scale(1.05);
}

.gradient-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0) 100%);
  pointer-events: none;
  z-index: 1;
}

.particle {
  position: absolute;
  border-radius: 50%;
  pointer-events: none;
  opacity: 0.3;
}

.particle-1 {
  top: -60px;
  right: -60px;
  width: 120px;
  height: 120px;
  background: rgba(255, 255, 255, 0.1);
  animation: float 6s ease-in-out infinite;
}

.particle-2 {
  bottom: -80px;
  left: -80px;
  width: 160px;
  height: 160px;
  background: rgba(255, 255, 255, 0.08);
  animation: float 8s ease-in-out infinite reverse;
}

.particle-3 {
  top: 50%;
  right: 10%;
  width: 80px;
  height: 80px;
  background: rgba(255, 255, 255, 0.06);
  animation: float 7s ease-in-out infinite;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes float {
  0%, 100% {
    transform: translate(0, 0) rotate(0deg);
  }
  33% {
    transform: translate(30px, -30px) rotate(120deg);
  }
  66% {
    transform: translate(-20px, 20px) rotate(240deg);
  }
}

@keyframes slideUp {
  to {
    opacity: 0;
    transform: translateY(-20px);
  }
}

@media (max-width: 1024px) {
  .campaign-content {
    flex-direction: column;
    align-items: flex-start;
    padding: 32px;
  }
  
  .campaign-metrics {
    width: 100%;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }
  
  .metric-value {
    font-size: 42px;
  }
}

@media (max-width: 768px) {
  .campaign-content {
    padding: 24px;
  }
  
  .campaign-title {
    font-size: 24px;
  }
  
  .campaign-description {
    font-size: 15px;
  }
  
  .campaign-cta {
    padding: 12px 24px;
    font-size: 15px;
  }
  
  .metric-value {
    font-size: 36px;
  }
  
  .campaign-metrics {
    gap: 16px;
  }
  
  .close-button {
    top: 16px;
    right: 16px;
  }
}
</style>

<script>
function dismissCampaignBanner() {
  const banner = document.querySelector('.apple-campaign-banner');
  if (banner) {
    banner.style.animation = 'slideUp 0.4s cubic-bezier(0.4, 0, 0.2, 1) forwards';
    setTimeout(() => {
      banner.style.display = 'none';
    }, 400);
  }
}
</script>
<% else %>
<% if Rails.env.development? %>
  <div style="background: #ffebee; padding: 10px; margin-bottom: 20px; border-radius: 4px; font-family: monospace; font-size: 12px; border-left: 4px solid #f44336;">
    <strong>DEBUG: Aucune campagne active trouvée</strong><br>
    Current Campaign: <%= @current_campaign&.title || 'nil' %><br>
    Active & Current: <%= @current_campaign&.active_and_current? || false %><br>
    Campaign Class: <%= @current_campaign.class.name rescue 'Error' %>
  </div>
<% end %>
<% end %>
