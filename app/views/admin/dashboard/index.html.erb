async function initializeChart() {
  try {
    await loadChartJS();
    
    const ctx = document.getElementById('portfolioChart');
    if (!ctx) return;
    
    if (window.portfolioChartInstance) {
      window.portfolioChartInstance.destroy();
    }
    
    const loadingDiv = document.getElementById('chart-loading');
    if (loadingDiv) loadingDiv.style.display = 'none';
    ctx.classList.remove('hidden');
    ctx.style.display = 'block';
  
    const textColor = '#64748b';
    const gridColor = 'rgba(100, 116, 139, 0.1)';
    
    const historicalData = <%= raw @monthly_profits.to_json %>;
    const projectionData = <%= raw @projection_data.to_json %>;
    const currentBalance = <%= current_user.mt5_accounts.sum(:balance) %>;
    
    const historicalLabels = historicalData.map(d => d.month);
    const projectionLabels = projectionData.map(d => d.month);
    const allLabels = [...historicalLabels, ...projectionLabels];
    
    const historicalProfits = historicalData.map(d => d.profit);
    
    const cumulativeBalance = [];
    let runningBalance = currentBalance - historicalProfits.reduce((a, b) => a + b, 0);
    historicalProfits.forEach(profit => {
      runningBalance += profit;
      cumulativeBalance.push(runningBalance);
    });
    
    const projectionBalances = projectionData.map(d => d.balance);
    const allBalances = [...cumulativeBalance, ...projectionBalances];
    
    const projectionLine = new Array(historicalData.length).fill(null);
    projectionLine[historicalData.length - 1] = currentBalance;
    projectionBalances.forEach(b => projectionLine.push(b));
    
    const gradient = ctx.getContext('2d').createLinearGradient(0, 0, 0, 350);
    gradient.addColorStop(0, 'rgba(59, 130, 246, 0.3)');
    gradient.addColorStop(0.5, 'rgba(139, 92, 246, 0.15)');
    gradient.addColorStop(1, 'rgba(139, 92, 246, 0)');
    
    window.portfolioChartInstance = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: allLabels,
        datasets: [
          {
            type: 'bar',
            label: 'Profit Mensuel',
            data: [...historicalProfits, ...new Array(projectionData.length).fill(null)],
            backgroundColor: historicalProfits.map(p => p >= 0 ? 'rgba(16, 185, 129, 0.7)' : 'rgba(239, 68, 68, 0.7)'),
            borderColor: historicalProfits.map(p => p >= 0 ? 'rgba(16, 185, 129, 1)' : 'rgba(239, 68, 68, 1)'),
            borderWidth: 0,
            borderRadius: { topLeft: 6, topRight: 6 },
            borderSkipped: false,
            yAxisID: 'y',
            order: 2
          },
          {
            type: 'line',
            label: 'Balance Cumul√©e',
            data: [...cumulativeBalance, ...new Array(projectionData.length).fill(null)],
            borderColor: 'rgba(255, 255, 255, 0.4)',
            backgroundColor: 'transparent',
            borderWidth: 2,
            fill: false,
            tension: 0.4,
            pointRadius: 0,
            pointHoverRadius: 6,
            pointBackgroundColor: '#fff',
            pointBorderColor: '#fff',
            pointBorderWidth: 2,
            yAxisID: 'y1',
            order: 1
          },
          {
            type: 'line',
            label: 'Projection',
            data: projectionLine,
            borderColor: '#8b5cf6',
            backgroundColor: gradient,
            borderWidth: 3,
            fill: true,
            tension: 0.4,
            pointRadius: function(context) {
              return context.dataIndex >= historicalData.length ? 6 : 0;
            },
            pointHoverRadius: 8,
            pointBackgroundColor: '#8b5cf6',
            pointBorderColor: '#1a1a1a',
            pointBorderWidth: 3,
            yAxisID: 'y1',
            order: 0
          }
        ]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        interaction: { intersect: false, mode: 'index' },
        plugins: {
          legend: { display: false },
          tooltip: {
            backgroundColor: 'rgba(0, 0, 0, 0.9)',
            titleColor: '#fff',
            titleFont: { size: 13, weight: 'bold' },
            bodyColor: '#e2e8f0',
            bodyFont: { size: 12 },
            borderColor: 'rgba(139, 92, 246, 0.5)',
            borderWidth: 1,
            cornerRadius: 12,
            padding: 14,
            displayColors: true,
            boxPadding: 6,
            callbacks: {
              title: function(context) {
                return 'üìÖ ' + context[0].label;
              },
              label: function(context) {
                if (context.parsed.y === null) return '';
                const value = context.parsed.y;
                const formattedValue = Math.abs(value).toLocaleString('fr-FR', { minimumFractionDigits: 0, maximumFractionDigits: 0 }) + ' ‚Ç¨';
                
                if (context.dataset.label === 'Profit Mensuel') {
                  const icon = value >= 0 ? 'üìà' : 'üìâ';
                  return icon + ' Profit: ' + (value >= 0 ? '+' : '-') + formattedValue;
                } else if (context.dataset.label === 'Projection') {
                  return 'üéØ Projection: ' + formattedValue;
                } else {
                  return 'üí∞ Balance: ' + formattedValue;
                }
              }
            }
          }
        },
        scales: {
          x: {
            grid: { display: false, drawBorder: false },
            ticks: { 
              color: textColor, 
              font: { size: 11, weight: '500' }, 
              maxRotation: 45, 
              minRotation: 45,
              padding: 8
            },
            border: { display: false }
          },
          y: {
            type: 'linear',
            position: 'left',
            grid: { color: gridColor, drawBorder: false, lineWidth: 1 },
            ticks: {
              color: textColor,
              font: { size: 11 },
              padding: 12,
              callback: function(value) { 
                if (value >= 1000 || value <= -1000) {
                  return (value / 1000).toFixed(1) + 'k ‚Ç¨';
                }
                return value.toLocaleString('fr-FR', { maximumFractionDigits: 0 }) + ' ‚Ç¨'; 
              }
            },
            border: { display: false }
          },
          y1: {
            type: 'linear',
            position: 'right',
            grid: { display: false },
            ticks: {
              color: '#8b5cf6',
              font: { size: 11, weight: '600' },
              padding: 12,
              callback: function(value) { 
                if (value >= 1000) {
                  return (value / 1000).toFixed(1) + 'k ‚Ç¨';
                }
                return value.toLocaleString('fr-FR', { maximumFractionDigits: 0 }) + ' ‚Ç¨'; 
              }
            },
            border: { display: false }
          }
        }
      }
    });
  } catch (error) {
    console.error('Error initializing chart:', error);
    const loadingDiv = document.getElementById('chart-loading');
    if (loadingDiv) {
      loadingDiv.innerHTML = '<div class="text-center"><i class="fa-solid fa-chart-line text-4xl text-neutral-600 mb-3"></i><p class="text-neutral-400">Graphique indisponible</p></div>';
    }
  }
}

