      <!-- Section Paiement (cach√©e initialement si upsell) -->
      <div id="payment-section">
        <!-- R√©capitulatif -->
        <div class="p-4 rounded-xl border border-neutral-800 bg-neutral-900/50 mb-6">
          <div class="flex items-center justify-between mb-3">
            <span class="text-neutral-400">Bot</span>
            <span id="recap-bot" class="text-white font-semibold"></span>
          </div>
          <div class="flex items-center justify-between mb-3">
            <span class="text-neutral-400">Produit</span>
            <span id="recap-product" class="text-white font-semibold"></span>
          </div>
          <div class="border-t border-neutral-800 pt-3 mt-3">
            <div class="flex items-center justify-between">
              <span class="text-lg font-bold text-white">Total</span>
              <span id="recap-price" class="text-2xl font-black text-orange-400"></span>
            </div>
          </div>
        </div>

        <!-- Formulaire Stripe -->
        <div class="space-y-4 mb-6">
          <label class="block text-sm font-medium text-neutral-300">Carte bancaire</label>
          <div id="card-element-update" class="p-4 bg-neutral-900 border border-neutral-700 rounded-xl"></div>
          <div id="card-errors-update" class="text-sm text-red-400"></div>
        </div>

        <!-- S√©curit√© -->
        <div class="flex items-center gap-3 p-4 rounded-xl bg-emerald-500/10 border border-emerald-500/20">
          <i class="fa-solid fa-shield-halved text-emerald-400 text-lg"></i>
          <div>
            <p class="text-sm font-medium text-emerald-400">Paiement 100% s√©curis√©</p>
            <p class="text-xs text-neutral-400">Vos donn√©es sont prot√©g√©es par Stripe</p>
          </div>
        </div>
      </div>
    </div>
    
    <div id="payment-footer" class="flex items-center gap-3 border-t border-neutral-800 bg-neutral-900 px-6 py-5">
      <button id="pay-update-btn" type="button" onclick="processUpdatePayment()" class="flex-1 flex items-center justify-center gap-2 rounded-xl bg-gradient-to-r from-orange-500 to-red-600 h-12 text-sm font-bold text-white shadow-lg shadow-orange-600/25 transition-all hover:from-orange-400 hover:to-red-500 disabled:opacity-50 disabled:cursor-not-allowed">
        <i class="fa-solid fa-lock"></i>
        <span id="pay-btn-text">Payer</span>
      </button>
      <button type="button" onclick="closeUpdatePayment()" class="flex items-center justify-center gap-2 rounded-xl border border-neutral-700 bg-neutral-800 h-12 px-6 text-sm font-medium text-neutral-300 transition-all hover:bg-neutral-700">
        Annuler
      </button>
    </div>
  </div>
</dialog>

<script src="https://js.stripe.com/v3/"></script>
<script>
let stripe, elements, cardElement;
let currentPaymentUrl = '';
let currentPaymentType = '';
let pendingUpsellData = null;

document.addEventListener('DOMContentLoaded', function() {
  const stripeKey = '<%= Rails.application.config.stripe_publishable_key %>';
  if (stripeKey) {
    stripe = Stripe(stripeKey);
    elements = stripe.elements({
      appearance: {
        theme: 'night',
        variables: {
          colorPrimary: '#f97316',
          colorBackground: '#171717',
          colorText: '#ffffff',
          colorDanger: '#ef4444',
          borderRadius: '8px',
          fontFamily: 'system-ui, sans-serif'
        }
      }
    });
    cardElement = elements.create('card', {
      style: {
        base: {
          fontSize: '16px',
          color: '#ffffff',
          '::placeholder': { color: '#737373' }
        }
      }
    });
    cardElement.mount('#card-element-update');
    cardElement.on('change', function(event) {
      document.getElementById('card-errors-update').textContent = event.error ? event.error.message : '';
    });
  }
});

function openUpdatePayment(url, botName, version, price, type, yearlyUrl, yearlyPrice) {
  currentPaymentUrl = url;
  currentPaymentType = type;
  
  document.getElementById('payment-subtitle').textContent = botName;
  document.getElementById('recap-bot').textContent = botName;
  document.getElementById('recap-product').textContent = type === 'yearly' ? 'Pack Annuel (1 an)' : 'Mise √† jour ' + version;
  document.getElementById('recap-price').textContent = price.toFixed(2).replace('.', ',') + ' ‚Ç¨';
  document.getElementById('pay-btn-text').textContent = 'Payer ' + price.toFixed(2).replace('.', ',') + ' ‚Ç¨';
  
  if (type === 'yearly') {
    document.getElementById('payment-icon').className = 'w-10 h-10 rounded-xl bg-gradient-to-br from-purple-500 to-pink-600 flex items-center justify-center text-white shadow-lg shadow-purple-500/20';
    document.getElementById('payment-icon').innerHTML = '<i class="fa-solid fa-gem"></i>';
    document.getElementById('payment-title').textContent = 'Pack Annuel';
    document.getElementById('upsell-section').classList.add('hidden');
    document.getElementById('payment-section').classList.remove('hidden');
    document.getElementById('payment-footer').classList.remove('hidden');
  } else {
    document.getElementById('payment-icon').className = 'w-10 h-10 rounded-xl bg-gradient-to-br from-orange-500 to-red-600 flex items-center justify-center text-white shadow-lg shadow-orange-500/20';
    document.getElementById('payment-icon').innerHTML = '<i class="fa-solid fa-arrow-up-from-bracket"></i>';
    document.getElementById('payment-title').textContent = 'Mise √† jour ' + version;
    
    pendingUpsellData = {
      singleUrl: url,
      singlePrice: price,
      yearlyUrl: yearlyUrl,
      yearlyPrice: yearlyPrice,
      botName: botName,
      version: version
    };
    
    document.getElementById('upsell-single-price').textContent = price.toFixed(2).replace('.', ',') + ' ‚Ç¨';
    document.getElementById('upsell-yearly-price').textContent = yearlyPrice.toFixed(2).replace('.', ',') + ' ‚Ç¨';
    document.getElementById('upsell-old-price').textContent = (yearlyPrice * 1.5).toFixed(2).replace('.', ',') + ' ‚Ç¨';
    
    const savings = Math.round((1 - (yearlyPrice / (price * 3))) * 100);
    document.getElementById('upsell-savings').textContent = savings + '%';
    
    document.getElementById('upsell-section').classList.remove('hidden');
    document.getElementById('payment-section').classList.add('hidden');
    document.getElementById('payment-footer').classList.add('hidden');
  }
  
  document.getElementById('update-payment-dialog').showModal();
}

function selectYearlyPack() {
  if (!pendingUpsellData) return;
  
  currentPaymentUrl = pendingUpsellData.yearlyUrl;
  currentPaymentType = 'yearly';
  
  document.getElementById('payment-icon').className = 'w-10 h-10 rounded-xl bg-gradient-to-br from-purple-500 to-pink-600 flex items-center justify-center text-white shadow-lg shadow-purple-500/20';
  document.getElementById('payment-icon').innerHTML = '<i class="fa-solid fa-gem"></i>';
  document.getElementById('payment-title').textContent = 'Pack Annuel';
  document.getElementById('payment-subtitle').textContent = pendingUpsellData.botName;
  
  document.getElementById('recap-product').textContent = 'Pack Annuel (1 an)';
  document.getElementById('recap-price').textContent = pendingUpsellData.yearlyPrice.toFixed(2).replace('.', ',') + ' ‚Ç¨';
  document.getElementById('recap-price').className = 'text-2xl font-black text-purple-400';
  document.getElementById('pay-btn-text').textContent = 'Payer ' + pendingUpsellData.yearlyPrice.toFixed(2).replace('.', ',') + ' ‚Ç¨';
  
  document.getElementById('pay-update-btn').className = 'flex-1 flex items-center justify-center gap-2 rounded-xl bg-gradient-to-r from-purple-500 to-pink-600 h-12 text-sm font-bold text-white shadow-lg shadow-purple-500/25 transition-all hover:from-purple-400 hover:to-pink-500 disabled:opacity-50 disabled:cursor-not-allowed';
  
  document.getElementById('upsell-section').classList.add('hidden');
  document.getElementById('payment-section').classList.remove('hidden');
  document.getElementById('payment-footer').classList.remove('hidden');
}

function skipUpsell() {
  if (!pendingUpsellData) return;
  
  currentPaymentUrl = pendingUpsellData.singleUrl;
  currentPaymentType = 'single';
  
  document.getElementById('recap-product').textContent = 'Mise √† jour ' + pendingUpsellData.version;
  document.getElementById('recap-price').textContent = pendingUpsellData.singlePrice.toFixed(2).replace('.', ',') + ' ‚Ç¨';
  document.getElementById('recap-price').className = 'text-2xl font-black text-orange-400';
  document.getElementById('pay-btn-text').textContent = 'Payer ' + pendingUpsellData.singlePrice.toFixed(2).replace('.', ',') + ' ‚Ç¨';
  
  document.getElementById('pay-update-btn').className = 'flex-1 flex items-center justify-center gap-2 rounded-xl bg-gradient-to-r from-orange-500 to-red-600 h-12 text-sm font-bold text-white shadow-lg shadow-orange-600/25 transition-all hover:from-orange-400 hover:to-red-500 disabled:opacity-50 disabled:cursor-not-allowed';
  
  document.getElementById('upsell-section').classList.add('hidden');
  document.getElementById('payment-section').classList.remove('hidden');
  document.getElementById('payment-footer').classList.remove('hidden');
}

function closeUpdatePayment() {
  document.getElementById('update-payment-dialog').close();
  pendingUpsellData = null;
  document.getElementById('upsell-section').classList.add('hidden');
  document.getElementById('payment-section').classList.remove('hidden');
  document.getElementById('payment-footer').classList.remove('hidden');
}

async function processUpdatePayment() {
  const payBtn = document.getElementById('pay-update-btn');
  const errorEl = document.getElementById('card-errors-update');
  const originalText = document.getElementById('pay-btn-text').textContent;
  
  payBtn.disabled = true;
  document.getElementById('pay-btn-text').innerHTML = '<i class="fa-solid fa-spinner fa-spin mr-2"></i>Traitement...';
  errorEl.textContent = '';
  
  try {
    const response = await fetch(currentPaymentUrl, {
      method: 'POST',
      headers: {
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content,
        'Content-Type': 'application/json',
        'Accept': 'application/json'
      }
    });
    
    const data = await response.json();
    
    if (data.error) {
      throw new Error(data.error);
    }
    
    if (data.free) {
      window.location.href = '/admin/my_bots?update_success=true&bot=' + encodeURIComponent(data.bot_name) + '&version=' + encodeURIComponent(data.version);
      return;
    }
    
    const { error, paymentIntent } = await stripe.confirmCardPayment(data.clientSecret, {
      payment_method: { card: cardElement }
    });
    
    if (error) {
      throw new Error(error.message);
    }
    
    if (paymentIntent.status === 'succeeded') {
      if (currentPaymentType === 'yearly') {
        window.location.href = '/admin/my_bots?pass_success=true&bot=' + encodeURIComponent(data.bot_name);
      } else {
        window.location.href = '/admin/my_bots?update_success=true&bot=' + encodeURIComponent(data.bot_name) + '&version=' + encodeURIComponent(data.version);
      }
    }
  } catch (error) {
    errorEl.textContent = error.message || 'Une erreur est survenue. Veuillez r√©essayer.';
    payBtn.disabled = false;
    document.getElementById('pay-btn-text').textContent = originalText;
  }
}

document.getElementById('update-payment-dialog').addEventListener('click', function(e) {
  if (e.target === this) closeUpdatePayment();
});
</script>
