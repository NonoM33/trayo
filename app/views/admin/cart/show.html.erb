<% content_for :title, "Mon Panier" %>

<div class="max-w-4xl mx-auto space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-white flex items-center gap-3">
        <i class="fa-solid fa-shopping-cart text-emerald-400"></i>
        Mon Panier
      </h1>
      <p class="text-neutral-400 mt-1"><%= @cart_count %> article<%= @cart_count > 1 ? 's' : '' %></p>
    </div>
    <%= link_to admin_shop_index_path, class: "inline-flex items-center gap-2 text-neutral-400 hover:text-white transition-colors" do %>
      <i class="fa-solid fa-arrow-left"></i>
      Continuer mes achats
    <% end %>
  </div>

  <% if params[:canceled] == 'true' %>
    <div class="rounded-xl bg-amber-500/10 border border-amber-500/30 p-4 flex items-center gap-3">
      <i class="fa-solid fa-exclamation-triangle text-amber-400"></i>
      <p class="text-amber-300">Le paiement a été annulé. Votre panier est conservé.</p>
    </div>
  <% end %>

  <% if @cart_bots.any? || @cart_products.any? %>
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Cart Items (2 cols) -->
      <div class="lg:col-span-2 space-y-4">
        <!-- Bots -->
        <% @cart_bots.each do |bot| %>
          <div class="rounded-xl bg-neutral-900 border border-neutral-800 p-5 flex items-center gap-5">
            <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center flex-shrink-0">
              <i class="fa-solid fa-robot text-white text-xl"></i>
            </div>
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-2 mb-1">
                <span class="px-2 py-0.5 rounded text-xs font-semibold bg-blue-500/20 text-blue-400">BOT</span>
                <h3 class="font-bold text-white truncate"><%= bot.name %></h3>
              </div>
              <p class="text-sm text-neutral-400 line-clamp-1"><%= bot.marketing_tagline %></p>
            </div>
            <div class="text-right flex-shrink-0">
              <div class="text-xl font-bold text-white"><%= number_to_currency(bot.price, unit: "€", format: "%n%u") %></div>
              <div class="text-xs text-neutral-500">Licence à vie</div>
            </div>
            <%= button_to remove_bot_admin_cart_path(bot), method: :delete, class: "p-2 rounded-lg text-neutral-500 hover:text-red-400 hover:bg-red-500/10 transition-colors", data: { confirm: "Retirer ce bot du panier ?" } do %>
              <i class="fa-solid fa-trash"></i>
            <% end %>
          </div>
        <% end %>

        <!-- Products -->
        <% @cart_products.each do |product| %>
          <div class="rounded-xl bg-neutral-900 border border-neutral-800 p-5 flex items-center gap-5">
            <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-emerald-400 to-teal-500 flex items-center justify-center flex-shrink-0">
              <i class="fa-solid <%= product.icon %> text-white text-xl"></i>
            </div>
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-2 mb-1">
                <span class="px-2 py-0.5 rounded text-xs font-semibold bg-emerald-500/20 text-emerald-400">PACK</span>
                <h3 class="font-bold text-white truncate"><%= product.name %></h3>
              </div>
              <p class="text-sm text-neutral-400 line-clamp-1"><%= product.description.to_s.truncate(60) %></p>
            </div>
            <div class="text-right flex-shrink-0">
              <div class="text-xl font-bold text-white"><%= number_to_currency(product.price, unit: "€", format: "%n%u") %></div>
              <div class="text-xs text-neutral-500"><%= product.interval_label %></div>
            </div>
            <%= button_to remove_product_admin_cart_path(product), method: :delete, class: "p-2 rounded-lg text-neutral-500 hover:text-red-400 hover:bg-red-500/10 transition-colors", data: { confirm: "Retirer ce produit du panier ?" } do %>
              <i class="fa-solid fa-trash"></i>
            <% end %>
          </div>
        <% end %>

        <!-- Clear Cart -->
        <div class="pt-2">
          <%= button_to clear_admin_cart_path, method: :delete, class: "text-sm text-neutral-500 hover:text-red-400 transition-colors", data: { confirm: "Vider tout le panier ?" } do %>
            <i class="fa-solid fa-trash-can mr-1"></i>
            Vider le panier
          <% end %>
        </div>
      </div>

      <!-- Summary (1 col) -->
      <div class="lg:col-span-1">
        <div class="rounded-xl bg-gradient-to-br from-emerald-500/10 to-teal-500/5 border-2 border-emerald-500/20 p-6 sticky top-6">
          <h3 class="text-lg font-bold text-white mb-4">Récapitulatif</h3>
          
          <div class="space-y-3 pb-4 border-b border-emerald-500/20">
            <% @cart_bots.each do |bot| %>
              <div class="flex justify-between text-sm">
                <span class="text-neutral-400 truncate pr-2"><%= bot.name %></span>
                <span class="text-white font-medium"><%= number_to_currency(bot.price, unit: "€", format: "%n%u") %></span>
              </div>
            <% end %>
            <% @cart_products.each do |product| %>
              <div class="flex justify-between text-sm">
                <span class="text-neutral-400 truncate pr-2"><%= product.name %></span>
                <span class="text-white font-medium"><%= number_to_currency(product.price, unit: "€", format: "%n%u") %></span>
              </div>
            <% end %>
          </div>

          <div class="flex justify-between items-baseline py-4 border-b border-emerald-500/20">
            <span class="text-neutral-400">Total</span>
            <span class="text-3xl font-extrabold text-emerald-400"><%= number_to_currency(@cart_total, unit: "€", format: "%n%u") %></span>
          </div>

          <form action="<%= checkout_admin_cart_path %>" method="post" class="mt-6" data-turbo="false">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <button type="submit" class="w-full py-4 rounded-xl bg-gradient-to-r from-emerald-500 to-teal-500 text-white font-bold text-lg flex items-center justify-center gap-3 hover:from-emerald-600 hover:to-teal-600 transition-all shadow-lg shadow-emerald-500/30 cursor-pointer border-none">
              <i class="fa-brands fa-stripe text-2xl"></i>
              Payer maintenant
            </button>
          </form>

          <div class="flex items-center justify-center gap-4 mt-4 text-xs text-neutral-500">
            <span class="flex items-center gap-1"><i class="fa-solid fa-lock text-emerald-400"></i> Sécurisé</span>
            <span class="flex items-center gap-1"><i class="fa-solid fa-shield-halved text-emerald-400"></i> SSL</span>
          </div>
        </div>
      </div>
    </div>

  <% else %>
    <!-- Empty Cart -->
    <div class="rounded-xl bg-neutral-900 border border-neutral-800 p-16 text-center">
      <div class="w-20 h-20 rounded-2xl bg-neutral-800 flex items-center justify-center mx-auto mb-6">
        <i class="fa-solid fa-shopping-cart text-neutral-600 text-3xl"></i>
      </div>
      <h2 class="text-xl font-bold text-white mb-2">Votre panier est vide</h2>
      <p class="text-neutral-400 mb-6">Explorez notre boutique et ajoutez des bots ou des packs</p>
      <%= link_to admin_shop_index_path, class: "inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-emerald-600 text-white font-semibold hover:bg-emerald-700 transition-colors" do %>
        <i class="fa-solid fa-store"></i>
        Voir la boutique
      <% end %>
    </div>
  <% end %>
</div>

